<Window x:Class="CatchCapture.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" Height="180" Width="280"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" Topmost="True" ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1"
            UseLayoutRounding="True" SnapsToDevicePixels="True">
        <Border.Effect>
             <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
             <!-- Spinner -->
             <Grid Width="40" Height="40" Margin="0,0,0,20">
                 <Ellipse Stroke="{DynamicResource ThemeForeground}" StrokeThickness="4" Opacity="0.1"/>
                 <Path Stroke="{DynamicResource AccentColor}" StrokeThickness="4" 
                       StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                       Data="M 20,0 A 20,20 0 0 1 40,20"
                       RenderTransformOrigin="0.5,0.5">
                     <Path.RenderTransform>
                         <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                     </Path.RenderTransform>
                     <Path.Triggers>
                         <EventTrigger RoutedEvent="Loaded">
                             <BeginStoryboard>
                                 <Storyboard>
                                     <DoubleAnimation Storyboard.TargetName="SpinnerRotate" 
                                                      Storyboard.TargetProperty="Angle" 
                                                      From="0" To="360" Duration="0:0:1" 
                                                      RepeatBehavior="Forever"/>
                                 </Storyboard>
                             </BeginStoryboard>
                         </EventTrigger>
                     </Path.Triggers>
                 </Path>
             </Grid>
             <TextBlock Text="{DynamicResource Wait}" FontWeight="SemiBold" FontSize="15" 
                        Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
