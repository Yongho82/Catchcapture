<UserControl x:Class="CatchCapture.Controls.ToolOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatchCapture.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400"
             UseLayoutRounding="True">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Malgun Gothic"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
        </Style>
         <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Background="Transparent" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonBackground}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
         <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Background="Transparent" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonBackground}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,2" Background="Transparent" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
        </Style>
        <Style x:Key="ToolSmallButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Background="Transparent" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSidebarButtonBackground}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource ThemePanelBackground}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" CornerRadius="8" Padding="12" TextElement.Foreground="{DynamicResource ThemeForeground}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <StackPanel x:Name="MainPanel" Orientation="Horizontal" VerticalAlignment="Center">
            <!-- 1. 색상 및 탭 섹션 -->
            <StackPanel x:Name="ColorSection" Margin="0,0,15,0">
                <Grid>
                    <TextBlock Text="색상" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="ColorLabel"/>
                    <StackPanel x:Name="NumberingTabs" Margin="0,0,0,8" Orientation="Horizontal" Visibility="Collapsed">
                        <RadioButton x:Name="NumBadgeTab" Content="배지" Style="{StaticResource TabButtonStyle}" IsChecked="True" GroupName="NumTabs"/>
                        <RadioButton x:Name="NumTextTab" Content="텍스트" Style="{StaticResource TabButtonStyle}" GroupName="NumTabs" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
                <WrapPanel x:Name="ColorGrid" Width="150"/>
            </StackPanel>

            <!-- 구분선 -->
            <Border x:Name="Separator" Width="1" Background="{DynamicResource ThemeBorder}" Margin="0,5,15,5"/>

            <!-- 2. 옵션 섹션 (도구별로 바뀜) -->
            <Grid x:Name="OptionContainer">
                <!-- 펜/형광펜 옵션 -->
                <StackPanel x:Name="PenOptions" Visibility="Collapsed">
                    <TextBlock Text="두께" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="PenSizeLabel"/>
                    <Slider x:Name="PenSizeSlider" Minimum="1" Maximum="50" Width="120" Margin="0,0,0,5" SmallChange="1"/>
                    <TextBlock x:Name="PenSizeValue" HorizontalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                    
                    <StackPanel x:Name="PenOpacityPanel" Margin="0,10,0,0" Visibility="Collapsed">
                         <TextBlock Text="투명도" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="PenOpacityLabel"/>
                         <StackPanel Orientation="Horizontal">
                            <Slider x:Name="PenOpacitySlider" Minimum="0" Maximum="1" Width="120" SmallChange="0.1"/>
                            <TextBlock x:Name="PenOpacityValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                         </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- 텍스트 옵션 -->
                <StackPanel x:Name="TextOptions" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="폰트" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="FontLabel"/>
                            <ComboBox x:Name="FontComboBox" Width="100" Height="25"/>
                        </StackPanel>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="크기" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="TextSizeLabel"/>
                            <ComboBox x:Name="FontSizeComboBox" Width="55" Height="25"/>
                        </StackPanel>
                        <!-- (기존 슬라이더는 코드 숨김 파일과의 호환성을 위해 유지하거나 제거 가능, 여기서는 일단 제거 제안) -->
                        <Slider x:Name="TextSizeSlider" Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <TextBlock Text="스타일" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="StyleLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="BoldBtn" Content="B" FontWeight="Bold" Width="25" Height="25" Style="{StaticResource ToggleButtonStyle}"/>
                        <ToggleButton x:Name="ItalicBtn" Content="I" FontStyle="Italic" Width="25" Height="25" Margin="4,0" Style="{StaticResource ToggleButtonStyle}"/>
                        <ToggleButton x:Name="UnderlineBtn" Content="U" Width="25" Height="25" Style="{StaticResource ToggleButtonStyle}"/>
                        <ToggleButton x:Name="ShadowBtn" Content="S" Width="25" Height="25" Margin="4,0" Style="{StaticResource ToggleButtonStyle}"/>
                        
                        <!-- [새로 추가] 문단 간격 버튼 -->
                        <Button x:Name="ParaSpacingBtn" Content="☰" Width="25" Height="25" Style="{StaticResource ToolSmallButtonStyle}" ToolTip="문단 간격 선택">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="ParaSpacingNarrow" Header="좁게"/>
                                    <MenuItem x:Name="ParaSpacingNormal" Header="보통" IsCheckable="True" IsChecked="True"/>
                                    <MenuItem x:Name="ParaSpacingWide" Header="넓게"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                        
                        <!-- 기존 체크박스 히든 처리 (코드 연동용) -->
                        <CheckBox x:Name="BoldCheck" Visibility="Collapsed"/>
                        <CheckBox x:Name="ItalicCheck" Visibility="Collapsed"/>
                        <CheckBox x:Name="UnderlineCheck" Visibility="Collapsed"/>
                        <CheckBox x:Name="ShadowCheck" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 도형 옵션 -->
                 <StackPanel x:Name="ShapeOptions" Visibility="Collapsed">
                    <TextBlock Text="도형" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="ShapeLabel"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <RadioButton x:Name="ShapeRect" Content="▢" Style="{StaticResource RadioButtonStyle}" Width="30" Height="25"/>
                        <RadioButton x:Name="ShapeCircle" Content="○" Style="{StaticResource RadioButtonStyle}" Width="30" Height="25" Margin="5,0"/>
                        <RadioButton x:Name="ShapeLine" Content="╱" Style="{StaticResource RadioButtonStyle}" Width="30" Height="25"/>
                        <RadioButton x:Name="ShapeArrow" Content="↗" Style="{StaticResource RadioButtonStyle}" Width="30" Height="25" Margin="5,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ShapeOutline" Content="테두리" IsChecked="True"/>
                        <RadioButton x:Name="ShapeFill" Content="채우기" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- 테두리 두께 (테두리 모드일 때 보임) -->
                    <StackPanel x:Name="ShapeThicknessPanel" Margin="0,8,0,0">
                         <TextBlock Text="두께" FontSize="10" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" Margin="0,0,0,2" x:Name="ShapeThicknessLabel"/>
                         <StackPanel Orientation="Horizontal">
                            <Slider x:Name="ShapeThicknessSlider" Minimum="1" Maximum="20" Width="100"/>
                            <TextBlock x:Name="ShapeThicknessValue" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="10"/>
                         </StackPanel>
                    </StackPanel>

                    <!-- 채우기 투명도 (채우기 모드일 때 보임) -->
                    <StackPanel x:Name="ShapeOpacityPanel" Margin="0,8,0,0" IsEnabled="False" Opacity="0.5" Visibility="Collapsed">
                         <TextBlock Text="채우기 투명도" FontSize="10" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" Margin="0,0,0,2" x:Name="ShapeOpacityLabel"/>
                         <StackPanel Orientation="Horizontal">
                            <Slider x:Name="ShapeOpacitySlider" Minimum="0" Maximum="1" Width="100"/>
                            <TextBlock x:Name="ShapeOpacityValue" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="10"/>
                         </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- 넘버링 배지 전용 옵션 (텍스트 옵션과 별개로 관리) -->
                <StackPanel x:Name="NumberingBadgeOptions" Visibility="Collapsed">
                    <TextBlock Text="배지 크기" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="NumBadgeLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="NumBadgeSlider" Minimum="10" Maximum="100" Width="120" SmallChange="1"/>
                        <TextBlock x:Name="NumBadgeValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </StackPanel>
                
                 <!-- 모자이크 옵션 -->
                <StackPanel x:Name="MosaicOptions" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="강도" FontWeight="SemiBold" x:Name="MosaicLabel"/>
                        <CheckBox x:Name="BlurCheck" Content="블러" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="MosaicSlider" Minimum="5" Maximum="50" Width="150" SmallChange="5" IsSnapToTickEnabled="True" TickFrequency="5"/>
                        <TextBlock x:Name="MosaicValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 지우개 옵션 -->
                <StackPanel x:Name="EraserOptions" Visibility="Collapsed">
                    <TextBlock Text="크기" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="EraserLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="EraserSlider" Minimum="5" Maximum="100" Width="150"/>
                        <TextBlock x:Name="EraserValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <!-- 마법봉 옵션 -->
                <StackPanel x:Name="MagicWandOptions" Visibility="Collapsed">
                    <TextBlock Text="허용 오차" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="MagicWandLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="MagicWandToleranceSlider" Minimum="0" Maximum="100" Width="120" SmallChange="1"/>
                        <TextBlock x:Name="MagicWandToleranceValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                    <CheckBox x:Name="MagicWandContiguousCheck" Content="연속 영역만" Margin="0,8,0,0" IsChecked="True"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
