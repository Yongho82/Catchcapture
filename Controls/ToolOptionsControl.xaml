<UserControl x:Class="CatchCapture.Controls.ToolOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatchCapture.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400"
             UseLayoutRounding="True">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Malgun Gothic"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
         <Style x:Key="ToolButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" BorderBrush="#CCCCCC" BorderThickness="1" Background="Transparent" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E6F7FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#1890FF"/>
                                <Setter Property="Foreground" Value="#1890FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Padding="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <StackPanel x:Name="MainPanel" Orientation="Horizontal" VerticalAlignment="Center">
            <!-- 1. 색상 섹션 (대부분의 도구에서 사용) -->
            <StackPanel x:Name="ColorSection" Margin="0,0,15,0">
                <TextBlock Text="색상" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="ColorLabel"/>
                <WrapPanel x:Name="ColorGrid" Width="150"/>
            </StackPanel>

            <!-- 구분선 -->
            <Border x:Name="Separator" Width="1" Background="#EEEEEE" Margin="0,5,15,5"/>

            <!-- 2. 옵션 섹션 (도구별로 바뀜) -->
            <Grid x:Name="OptionContainer">
                <!-- 펜/형광펜 옵션 -->
                <StackPanel x:Name="PenOptions" Visibility="Collapsed">
                    <TextBlock Text="두께" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="PenSizeLabel"/>
                    <Slider x:Name="PenSizeSlider" Minimum="1" Maximum="50" Width="120" Margin="0,0,0,5" SmallChange="1"/>
                    <TextBlock x:Name="PenSizeValue" HorizontalAlignment="Center" Foreground="Gray" FontSize="11"/>
                    
                    <StackPanel x:Name="PenOpacityPanel" Margin="0,10,0,0" Visibility="Collapsed">
                         <TextBlock Text="투명도" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="PenOpacityLabel"/>
                         <StackPanel Orientation="Horizontal">
                            <Slider x:Name="PenOpacitySlider" Minimum="0" Maximum="1" Width="120" SmallChange="0.1"/>
                            <TextBlock x:Name="PenOpacityValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                         </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- 텍스트 옵션 -->
                <StackPanel x:Name="TextOptions" Visibility="Collapsed">
                    <TextBlock Text="폰트" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="FontLabel"/>
                    <ComboBox x:Name="FontComboBox" Width="120" Height="25" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="크기" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="TextSizeLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="TextSizeSlider" Minimum="8" Maximum="72" Width="120"/>
                        <TextBlock x:Name="TextSizeValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                    </StackPanel>

                    <Border Height="10"/>
                    <TextBlock Text="스타일" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="StyleLabel"/>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                             <CheckBox x:Name="BoldCheck" Content="굵게"/>
                             <CheckBox x:Name="ItalicCheck" Content="기울임" Margin="10,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                             <CheckBox x:Name="UnderlineCheck" Content="밑줄"/>
                             <CheckBox x:Name="ShadowCheck" Content="그림자" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- 도형 옵션 -->
                 <StackPanel x:Name="ShapeOptions" Visibility="Collapsed">
                    <TextBlock Text="도형" FontWeight="SemiBold" Margin="0,0,0,4" x:Name="ShapeLabel"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <RadioButton x:Name="ShapeRect" Content="▢" Style="{StaticResource ToolButtonStyle}" Width="30" Height="25"/>
                        <RadioButton x:Name="ShapeCircle" Content="○" Style="{StaticResource ToolButtonStyle}" Width="30" Height="25" Margin="5,0"/>
                        <RadioButton x:Name="ShapeLine" Content="╱" Style="{StaticResource ToolButtonStyle}" Width="30" Height="25"/>
                        <RadioButton x:Name="ShapeArrow" Content="↗" Style="{StaticResource ToolButtonStyle}" Width="30" Height="25" Margin="5,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ShapeOutline" Content="테두리" IsChecked="True"/>
                        <RadioButton x:Name="ShapeFill" Content="채우기" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel x:Name="ShapeOpacityPanel" Margin="0,8,0,0" IsEnabled="False" Opacity="0.5">
                         <TextBlock Text="채우기 투명도" FontSize="10" Foreground="Gray" Margin="0,0,0,2" x:Name="ShapeOpacityLabel"/>
                         <StackPanel Orientation="Horizontal">
                            <Slider x:Name="ShapeOpacitySlider" Minimum="0" Maximum="1" Width="100"/>
                            <TextBlock x:Name="ShapeOpacityValue" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="10"/>
                         </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- 넘버링 옵션 -->
                <StackPanel x:Name="NumberingOptions" Visibility="Collapsed">
                    <TextBlock Text="크기" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="NumSizeLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="NumSizeSlider" Minimum="15" Maximum="60" Width="120"/>
                        <TextBlock x:Name="NumSizeValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                    </StackPanel>
                </StackPanel>
                
                 <!-- 모자이크 옵션 -->
                <StackPanel x:Name="MosaicOptions" Visibility="Collapsed">
                    <TextBlock Text="강도" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="MosaicLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="MosaicSlider" Minimum="5" Maximum="50" Width="150" SmallChange="5" IsSnapToTickEnabled="True" TickFrequency="5"/>
                        <TextBlock x:Name="MosaicValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 지우개 옵션 -->
                <StackPanel x:Name="EraserOptions" Visibility="Collapsed">
                    <TextBlock Text="크기" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="EraserLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="EraserSlider" Minimum="5" Maximum="100" Width="150"/>
                        <TextBlock x:Name="EraserValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <!-- 마법봉 옵션 -->
                <StackPanel x:Name="MagicWandOptions" Visibility="Collapsed">
                    <TextBlock Text="허용 오차" FontWeight="SemiBold" Margin="0,0,0,8" x:Name="MagicWandLabel"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="MagicWandToleranceSlider" Minimum="0" Maximum="100" Width="120" SmallChange="1"/>
                        <TextBlock x:Name="MagicWandToleranceValue" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                    </StackPanel>
                    <CheckBox x:Name="MagicWandContiguousCheck" Content="연속 영역만" Margin="0,8,0,0" IsChecked="True"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
