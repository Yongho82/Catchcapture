<UserControl x:Class="CatchCapture.Controls.TwoTierToolButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="65">
    
    <Grid Width="65" Height="65" Margin="2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="23"/>
        </Grid.RowDefinitions>
        
        <!-- 메인 버튼 -->
        <Button x:Name="MainButton" Grid.Row="0" 
                Background="Transparent" BorderThickness="0" Cursor="Hand"
                Click="MainButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6,6,0,0"
                            Padding="2">
                        <StackPanel>
                            <!-- 아이콘 -->
                            <ContentPresenter x:Name="IconPresenter" 
                                            Content="{Binding IconContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Width="20" Height="20" Margin="0,2,0,2"
                                            HorizontalAlignment="Center"/>
                            <!-- 라벨 -->
                            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                     FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#CCE4FF" TargetName="border"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <!-- 옵션 버튼 (▼) -->
        <Button x:Name="OptionsButton" Grid.Row="1" 
                Background="Transparent" BorderThickness="0" Cursor="Hand"
                Click="OptionsButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            BorderBrush="#E0E6F0" 
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,6,6"
                            Height="13">
                        <TextBlock Text="▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#888"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#CCE4FF" TargetName="border"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
