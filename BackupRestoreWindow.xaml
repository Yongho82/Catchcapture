<Window x:Class="CatchCapture.BackupRestoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DB Restore" Height="600" Width="900"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Malgun Gothic, Segoe UI">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="MacButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MacButtonSecondary" TargetType="Button" BasedOn="{StaticResource MacButtonPrimary}">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ThemeBorder}"/>
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="{DynamicResource ThemeBackground}" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="{DynamicResource ThemeTitleBackground}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorder}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="15,0,10,0">
                    <TextBlock x:Name="TitleText" Text="{DynamicResource RestoreFromBackup}" Foreground="{DynamicResource ThemeTitleForeground}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                    <Button Click="BtnClose_Click" Width="30" Height="30" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <TextBlock Text="✕" FontSize="12" Foreground="{DynamicResource ThemeTitleForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <!-- List Area -->
            <Border Grid.Row="1" Margin="20,20,20,0" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" CornerRadius="4">
                <ListView x:Name="BackupListView" BorderThickness="0" Background="Transparent" Foreground="{DynamicResource ThemeForeground}" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="크기 (Size)" Width="100" DisplayMemberBinding="{Binding SizeDisplay}"/>
                            <GridViewColumn Header="날짜 (Date)" Width="180" DisplayMemberBinding="{Binding DateDisplay}"/>
                            <GridViewColumn Header="파일명 (File Name)" Width="250" DisplayMemberBinding="{Binding FileName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Ticker Area (Moved above buttons) -->
            <TextBlock x:Name="TxtTicker" Grid.Row="2" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Foreground="#888888" FontSize="12" Margin="20,10,20,5"/>

            <!-- Footer Buttons -->
            <Grid Grid.Row="3" Margin="20,0,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Buttons (Combined for better spacing) -->
                <Grid Grid.ColumnSpan="3" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="BtnExport" Content="전체 내보내기 (IMG+DB)" Width="190" Height="36" Margin="0,0,10,0" Click="BtnExport_Click"
                                Style="{StaticResource MacButtonSecondary}"/>
                        <Button x:Name="BtnImport" Content="전체 가져오기 (IMG+DB)" Width="190" Height="36" Click="BtnImport_Click"
                                Style="{StaticResource MacButtonSecondary}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BtnCreateManualBackup" Content="DB 백업 (현재 상태)" Width="160" Height="36" Margin="0,0,10,0" Click="BtnCreateManualBackup_Click"
                                Style="{StaticResource MacButtonSecondary}"/>

                        <Button x:Name="BtnRestore" Content="DB 복구" Width="100" Height="36" Margin="0,0,10,0" Click="BtnRestore_Click"
                                Style="{StaticResource MacButtonPrimary}"/>
                        
                        <Button Content="{DynamicResource Close}" Width="90" Height="36" Click="BtnClose_Click"
                                Style="{StaticResource MacButtonSecondary}"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Loading Overlay -->
            <Grid x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="4" Background="#80000000" Visibility="Collapsed">
                <Border Background="{DynamicResource ThemeBackground}" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource RestoringMsg}" Foreground="{DynamicResource ThemeForeground}" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" Height="4" Width="200"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
