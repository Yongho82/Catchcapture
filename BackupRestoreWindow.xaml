<Window x:Class="CatchCapture.BackupRestoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DB Restore" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Malgun Gothic, Segoe UI">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="12" Background="{DynamicResource ThemeBackground}" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="{DynamicResource ThemeTitleBackground}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorder}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="15,0,10,0">
                    <TextBlock Text="{DynamicResource RestoreFromBackup}" Foreground="{DynamicResource ThemeTitleForeground}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                    <Button Click="BtnClose_Click" Width="30" Height="30" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <TextBlock Text="✕" FontSize="12" Foreground="{DynamicResource ThemeTitleForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <!-- List Area -->
            <Border Grid.Row="1" Margin="20,20,20,0" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" CornerRadius="4">
                <ListView x:Name="BackupListView" BorderThickness="0" Background="Transparent" Foreground="{DynamicResource ThemeForeground}" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="크기 (Size)" Width="100" DisplayMemberBinding="{Binding SizeDisplay}"/>
                            <GridViewColumn Header="날짜 (Date)" Width="180" DisplayMemberBinding="{Binding DateDisplay}"/>
                            <GridViewColumn Header="파일명 (File Name)" Width="250" DisplayMemberBinding="{Binding FileName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Button x:Name="BtnCreateManualBackup" Content="현재 상태 백업하기" Width="140" Height="34" Click="BtnCreateManualBackup_Click"
                        Background="{DynamicResource ThemeBorder}" Foreground="{DynamicResource ThemeForeground}" BorderThickness="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="DB 복구 실행" Width="110" Height="34" Margin="0,0,10,0" Click="BtnRestore_Click"
                        Background="{DynamicResource AccentColor}" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="{DynamicResource Close}" Width="80" Height="34" Click="BtnClose_Click"
                        Background="Transparent" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Foreground="{DynamicResource ThemeForeground}">
                     <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                             <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#10000000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="3" Background="#80000000" Visibility="Collapsed">
                <Border Background="{DynamicResource ThemeBackground}" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource RestoringMsg}" Foreground="{DynamicResource ThemeForeground}" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" Height="4" Width="200"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
