<Window x:Class="CatchCapture.NoteExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ë‚´ ë…¸íŠ¸ íƒìƒ‰ê¸°" Height="800" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="NoteItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#1FFFFFFF"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1FFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2FFFFFFF"/>
                                <Setter Property="BorderBrush" Value="#4FFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- List Mode Template -->
        <DataTemplate x:Key="ListTemplate">
            <Grid Height="38">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="40"/> <!-- Delete icon -->
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ðŸ‘" Foreground="#66FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding Title}" Foreground="White" VerticalAlignment="Center" Margin="10,0" TextTrimming="CharacterEllipsis"/>
                <TextBlock Grid.Column="2" Text="ê¸°ë³¸ ê·¸ë£¹" Foreground="#99FFFFFF" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock Grid.Column="3" Text="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Foreground="#99FFFFFF" VerticalAlignment="Center" Margin="10,0"/>
                <Button Grid.Column="4" Content="ðŸ—‘" Foreground="#44FFFFFF" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
            </Grid>
        </DataTemplate>

        <!-- Card Mode Template -->
        <DataTemplate x:Key="CardTemplate">
            <Border Width="220" Height="260" Background="#1FFFFFFF" CornerRadius="12" Margin="8" Padding="12" BorderThickness="1" BorderBrush="#2FFFFFFF">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" FontSize="14" TextTrimming="CharacterEllipsis"/>
                    <Border Grid.Row="1" CornerRadius="8" Background="#2FFFFFFF" ClipToBounds="True">
                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <TextBlock Grid.Row="2" Text="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Foreground="#88FFFFFF" FontSize="11" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- Tag Chip Style -->
        <Style x:Key="TagChipStyle" TargetType="Button">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}" BorderThickness="1" BorderBrush="#20FFFFFF">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#30FFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#4FFFFFFF">
        <Border.Background>
            <SolidColorBrush Color="#FF1A1C1E"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.5" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header / Top Bar (ezMemo Style) -->
            <Grid Grid.Row="0" Background="#FF131313" Margin="0,0,0,1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <Button x:Name="BtnNewNote" Content="ðŸ“„ ìƒˆ ë©”ëª¨" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" Margin="0,0,10,0" Click="BtnNewNote_Click"/>
                    <Button x:Name="BtnSelectAll" Content="ðŸ”µ ëª¨ë‘ ì„ íƒ" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" Margin="0,0,10,0"/>
                    <Button x:Name="BtnDelete" Content="ðŸ—‘ ì‚­ì œ" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0">
                    <Border Background="#2FFFFFFF" CornerRadius="5" Width="250" Height="34" Margin="0,0,15,0">
                        <Grid>
                            <TextBox x:Name="TxtSearch" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10,5" VerticalContentAlignment="Center"/>
                            <TextBlock Text="ê²€ìƒ‰" Foreground="#5FFFFFFF" IsHitTestVisible="False" Margin="10,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <Button x:Name="BtnListMode" Content="ã€“" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" FontSize="16" Width="30" Click="BtnListMode_Click"/>
                    <Button x:Name="BtnCardMode" Content="â˜·" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" FontSize="16" Width="30" Click="BtnCardMode_Click"/>
                    <Button x:Name="BtnClose" Content="âœ•" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="18" Width="40" Height="40" Click="BtnClose_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- Content Area (Sidebar, List, Preview) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/> <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>   <!-- Main List -->
                    <ColumnDefinition Width="250"/> <!-- Right Preview -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar (ezMemo Style) -->
                <Border Background="#FF131313" BorderThickness="0,0,1,0" BorderBrush="#2FFFFFFF">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <Button Content="ðŸ  ì „ì²´" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" HorizontalContentAlignment="Left" Padding="10,5" Margin="0,2" Click="BtnFilter_Click" Tag="All"/>
                            <Button Content="ðŸ“ ê¸°ë³¸ê·¸ë£¹" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="LightCoral" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="10,5" Margin="0,2" Click="BtnFilter_Click" Tag="Default"/>
                            <Button Content="ðŸ“… ì˜¤ëŠ˜" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" HorizontalContentAlignment="Left" Padding="10,5" Margin="0,2" Click="BtnFilter_Click" Tag="Today"/>
                            <Button Content="ðŸ“… ìµœê·¼ 7ì¼" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" HorizontalContentAlignment="Left" Padding="10,5" Margin="0,2" Click="BtnFilter_Click" Tag="Recent"/>
                            <Button Content="ðŸš® íœ´ì§€í†µ" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="Gray" HorizontalContentAlignment="Left" Padding="10,5" Margin="0,2" Click="BtnFilter_Click" Tag="Trash"/>
                            
                            <Separator Background="#20FFFFFF" Margin="0,15"/>
                            
                            <TextBlock Text="íƒœê·¸" Foreground="#55FFFFFF" FontSize="11" Margin="10,0,0,10"/>
                            <ItemsControl x:Name="ItemsTags" Margin="5,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource TagChipStyle}" Click="BtnTag_Click" Tag="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Note List (Main Area) -->
                <Grid Grid.Column="1" Background="#FF1A1C1E">
                    <!-- List Header for List Mode -->
                    <Grid x:Name="ListHeader" VerticalAlignment="Top" Height="30" Background="#FF252525">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/> <!-- Eye icon -->
                            <ColumnDefinition Width="2*"/> <!-- Title -->
                            <ColumnDefinition Width="1*"/> <!-- Group -->
                            <ColumnDefinition Width="150"/> <!-- Date -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1" Text="ì œëª©" Foreground="#99FFFFFF" FontSize="11" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBlock Grid.Column="2" Text="ê·¸ë£¹" Foreground="#99FFFFFF" FontSize="11" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBlock Grid.Column="3" Text="ìˆ˜ì •ì¼" Foreground="#99FFFFFF" FontSize="11" VerticalAlignment="Center" Margin="10,0"/>
                    </Grid>

                    <ListBox x:Name="LstNotes" Margin="0,30,0,0" Background="Transparent" BorderThickness="0" 
                             ItemContainerStyle="{StaticResource NoteItemStyle}" 
                             ItemTemplate="{StaticResource ListTemplate}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="LstNotes_SelectionChanged">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel x:Name="NoteItemsPanel"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Grid>

                <!-- Right Preview Pane -->
                <Border Grid.Column="2" Background="#FF131313" BorderThickness="1,0,0,0" BorderBrush="#2FFFFFFF">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Title -->
                            <RowDefinition Height="*"/>    <!-- Thumbnail/Content -->
                        </Grid.RowDefinitions>
                        
                        <TextBlock x:Name="TxtPreviewTitle" Text="ì„ íƒëœ ë…¸íŠ¸ ì—†ìŒ" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Border CornerRadius="12" Background="#1FFFFFFF" Margin="0,0,0,20" BorderThickness="1" BorderBrush="#20FFFFFF">
                                    <Image x:Name="ImgPreview" Source="{Binding SelectedItem.Thumbnail, ElementName=LstNotes}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>
                                <TextBlock x:Name="TxtPreviewContent" Text="{Binding SelectedItem.PreviewContent, ElementName=LstNotes}" 
                                           Foreground="#E0FFFFFF" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
