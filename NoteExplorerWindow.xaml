<Window x:Class="CatchCapture.NoteExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        MinHeight="500" Height="920" MinWidth="1000" Width="1200"
        Title="ìºì¹˜ìº¡ì²˜ ë…¸íŠ¸ íƒìƒ‰ê¸°"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        StateChanged="NoteExplorerWindow_StateChanged">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="60" 
                      ResizeBorderThickness="8" 
                      CornerRadius="12" 
                      GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- List Mode Item Container Style -->
        <!-- List Mode Item Container Style -->
        <Style x:Key="NoteItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeSidebarButtonPressedBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Mode Item Container Style -->
        <Style x:Key="NoteCardStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" BorderThickness="2" BorderBrush="Transparent" CornerRadius="10" Margin="5" Width="220">
                             <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource ThemeForeground}"/>
                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- List Mode Template -->
        <DataTemplate x:Key="ListTemplate">
            <Grid Height="38" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28"/> <!-- Optimized Checkbox Width -->
                    <ColumnDefinition Width="100"/> <!-- Group -->
                    <ColumnDefinition Width="2*"/>  <!-- Title -->
                    <ColumnDefinition Width="3*"/>  <!-- Content -->
                    <ColumnDefinition Width="150"/> <!-- Date -->
                    <ColumnDefinition Width="100"/>  <!-- Actions -->
                </Grid.ColumnDefinitions>
                
                <!-- CheckBox -->
                <CheckBox x:Name="ChkSelect" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                          Visibility="{Binding DataContext.IsSelectionMode, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <!-- Group -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Ellipse Width="10" Height="10" Fill="{Binding CategoryColor}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding CategoryName}" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="13" FontWeight="Medium"/>
                </StackPanel>

                <!-- Title -->
                <TextBlock Grid.Column="2" Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource ThemeForeground}" FontSize="14" 
                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Margin="10,0"/>

                <!-- Content -->
                <TextBlock Grid.Column="3" Text="{Binding TruncatedContent}" Foreground="{DynamicResource ThemeForeground}" Opacity="0.9" FontSize="13" 
                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Margin="10,0"/>

                <!-- Date -->
                <TextBlock Grid.Column="4" Text="{Binding FormattedDate}" Foreground="{DynamicResource ThemeForeground}" Opacity="0.7" FontSize="12" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <!-- Actions -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Click="BtnRestoreItem_Click" Tag="{Binding Id}" ToolTip="ë³µì›"
                            Visibility="{Binding IsVisibleInTrash}"
                            Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,8,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="brd" Width="24" Height="24" Background="Transparent" CornerRadius="12">
                                    <Path Data="M12,5V1L7,6L12,11V7C15.31,7 18,9.69 18,13C18,16.31 15.31,19 12,19C8.69,19 6,16.31 6,13H4C4,17.42 7.58,21 12,21C16.42,21 20,17.42 20,13C20,8.58 16.42,5 12,5Z" 
                                           Fill="{DynamicResource ThemeForeground}" Opacity="0.5" Width="14" Height="14" Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Click="BtnPinItem_Click" Tag="{Binding Id}" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,8,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="brd" Width="24" Height="24" Background="Transparent" CornerRadius="12">
                                    <Path x:Name="path" Data="M16,12V4H17V2H7V4H8V12L6,14V16H11V22L12,23L13,22V16H18V14L16,12Z" 
                                           Fill="{DynamicResource ThemeForeground}" Opacity="0.3" Width="14" Height="14" Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                        <Setter TargetName="path" Property="Fill" Value="#E74C3C"/>
                                        <Setter TargetName="path" Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="âœ•" Click="BtnDeleteItem_Click" Tag="{Binding Id}"
                            Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Cursor="Hand" 
                            FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Board-style separator line -->
                <Border Grid.ColumnSpan="6" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorder}" VerticalAlignment="Bottom"/>
            </Grid>
        </DataTemplate>

        <!-- Card Mode Template -->
        <DataTemplate x:Key="CardTemplate">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Thumbnail -->
                <Border Grid.Row="0" Background="{DynamicResource ThemeSidebarButtonBackground}" CornerRadius="8,8,0,0" ClipToBounds="True">
                    <Grid>
                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Thumbnail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        
                        <!-- Placeholder if no image -->
                        <Viewbox Width="40" Height="40" Opacity="0.1">
                            <Viewbox.Style>
                                <Style TargetType="Viewbox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Thumbnail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Viewbox.Style>
                            <Path Data="M19,5V7H15V5H19M9,5V7H5V5H9M11,5V19H13V5H11M19,9V11H15V9H19M9,9V11H5V9H9M19,13V15H15V13H19M9,13V15H5V13H9M19,17V19H15V17H19M9,17V19H5V17H9Z" 
                                  Fill="{DynamicResource ThemeForeground}"/>
                        </Viewbox>

                        <!-- Pinned Icon -->
                        <Border Visibility="{Binding IsPinned, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Width="24" Height="24"
                                Background="#80000000" CornerRadius="12">
                            <TextBlock Text="ðŸ“Œ" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Foreground="White"/>
                        </Border>

                        <!-- Selection Checkbox -->
                        <CheckBox IsChecked="{Binding IsSelected}" Margin="8" VerticalAlignment="Top" HorizontalAlignment="Left"
                                  Visibility="{Binding DataContext.IsSelectionMode, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource BooleanToVisibilityConverter}}">
                             <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>


                <!-- Info -->
                <Border Grid.Row="1" Background="{DynamicResource ThemeSidebarButtonPressedBackground}" CornerRadius="0,0,8,8" Padding="12,6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Category -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="8" Height="8" Fill="{Binding CategoryColor}" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CategoryName}" FontSize="11" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                        </StackPanel>

                        <!-- Title -->
                        <TextBlock Grid.Row="1" Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource ThemeForeground}" TextTrimming="CharacterEllipsis" 
                                   TextWrapping="NoWrap" Margin="0,0,0,6"/>

                        <!-- Footer -->
                        <Grid Grid.Row="2">
                            <TextBlock Text="{Binding FormattedDate}" FontSize="11" Foreground="{DynamicResource ThemeForeground}" Opacity="0.7" VerticalAlignment="Center"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Click="BtnRestoreItem_Click" Tag="{Binding Id}" ToolTip="ë³µì›"
                                        Visibility="{Binding IsVisibleInTrash}"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="brd" Width="24" Height="24" Background="Transparent" CornerRadius="12">
                                                <Path Data="M12,5V1L7,6L12,11V7C15.31,7 18,9.69 18,13C18,16.31 15.31,19 12,19C8.69,19 6,16.31 6,13H4C4,17.42 7.58,21 12,21C16.42,21 20,17.42 20,13C20,8.58 16.42,5 12,5Z" 
                                                       Fill="{DynamicResource ThemeForeground}" Opacity="0.5" Width="14" Height="14" Stretch="Uniform"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="brd" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Click="BtnPinItem_Click" Tag="{Binding Id}"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="ê³ ì •" Margin="0,0,4,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="brd" Width="24" Height="24" Background="Transparent" CornerRadius="12">
                                                <Path x:Name="path" Data="M16,12V4H17V2H7V4H8V12L6,14V16H11V22L12,23L13,22V16H18V14L16,12Z" 
                                                       Fill="{DynamicResource ThemeForeground}" Opacity="0.3" Width="14" Height="14" Stretch="Uniform"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                                    <Setter TargetName="path" Property="Fill" Value="#E74C3C"/>
                                                    <Setter TargetName="path" Property="Opacity" Value="1"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="brd" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Width="24" Height="24" Click="BtnDeleteItem_Click" Tag="{Binding Id}"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="ì‚­ì œ">
                                    <TextBlock x:Name="TxtTrash" Text="ðŸ—‘ï¸" FontSize="12" Opacity="0.5" Foreground="{DynamicResource ThemeForeground}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Sidebar Item Style -->
        <Style x:Key="SidebarItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="FontSize" Value="13"/> <!-- Reduced -1 -->
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                            </Trigger>
                            <Trigger Property="Uid" Value="Active">
                                <Setter Property="Background" Value="{DynamicResource ThemeSidebarButtonPressedBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- Tag Button Style -->
        <Style x:Key="TagButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeSidebarButtonBackground}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- Start of IconButton Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="{DynamicResource ThemeSidebarButtonHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- End of IconButton Style -->

    </Window.Resources>

    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12" BorderThickness="1" BorderBrush="{DynamicResource ThemeWindowBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Color="Black" Opacity="0.1" ShadowDepth="5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Action Bar -->
                <RowDefinition Height="*"/>    <!-- Main Content -->
                <RowDefinition Height="Auto"/> <!-- Tip Bar -->
            </Grid.RowDefinitions>

            <!-- Top Action Bar -->
            <Border Grid.Row="0" Background="{DynamicResource ThemeTitleBackground}" CornerRadius="12,12,0,0" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeWindowBorder}">
                <Grid Margin="25,12,20,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Title/Icon -->
                        <ColumnDefinition Width="*"/>    <!-- Search Box -->
                        <ColumnDefinition Width="Auto"/> <!-- Buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Title & Main Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Image Source="icons/my_note.png" Width="22" Height="22" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtMyNoteTitle" Text="ë§ˆì´ ë…¸íŠ¸" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource ThemeTitleForeground}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Search Box (Repositioned from content area) -->
                    <StackPanel Grid.Column="1" WindowChrome.IsHitTestVisibleInChrome="True" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border x:Name="SearchBorder" Background="#20000000" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" CornerRadius="18" Height="36" Width="450">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=TxtSearch}" Value="True">
                                            <Setter Property="BorderBrush" Value="#8E2DE2"/>
                                            <Setter Property="Background" Value="#30000000"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <TextBox x:Name="TxtSearch" KeyDown="TxtSearch_KeyDown" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" FontSize="13" 
                                         Foreground="{DynamicResource ThemeTitleForeground}" CaretBrush="{DynamicResource ThemeTitleForeground}" Margin="15,0,35,0" Padding="0"/>
                                <TextBlock x:Name="TxtSearchPlaceholder" Text="ê²€ìƒ‰..." IsHitTestVisible="False" Foreground="{DynamicResource ThemeTitleForeground}" Opacity="0.4" VerticalAlignment="Center" Margin="17,0" FontSize="13">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Button x:Name="BtnSearch" Click="BtnSearch_Click" HorizontalAlignment="Right" Width="36" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <TextBlock Text="ðŸ”" FontSize="14" Foreground="{DynamicResource ThemeTitleForeground}"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="BtnNewNote" Click="BtnNewNote_Click" Cursor="Hand" Margin="0,0,12,0"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="brdNewNote" Background="#8E2DE2" CornerRadius="10" Padding="20,10">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" Color="#8E2DE2" Opacity="0.3" ShadowDepth="2"/>
                                        </Border.Effect>
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brdNewNote" Property="Background" Value="#7A1DC1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="White" Width="18" Height="18" Margin="0,0,8,0" Stretch="Uniform"/>
                                <TextBlock x:Name="TxtNewNoteLabel" Text="ìƒˆ ë…¸íŠ¸ ìž‘ì„±" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnMinimize" Width="36" Height="36" Click="BtnMinimize_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Path Data="M20,14H4V10H20V14Z" Fill="{DynamicResource ThemeTitleForeground}" Opacity="0.8" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>

                        <Button x:Name="BtnMaximize" Width="36" Height="36" Click="BtnMaximize_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Path x:Name="PathMaximize" Data="M4,4H20V20H4V4M6,8V18H18V8H6Z" Fill="{DynamicResource ThemeTitleForeground}" Opacity="0.8" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>

                        <Button x:Name="BtnClose" Width="36" Height="36" Click="BtnClose_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="{DynamicResource ThemeTitleForeground}" Opacity="0.8" Stretch="Uniform" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
        </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/> 
                    <ColumnDefinition x:Name="ColNoteList" Width="2*" MinWidth="300"/>
                    <ColumnDefinition Width="Auto"/> <!-- Splitter -->
                    <ColumnDefinition x:Name="ColPreview" Width="1.2*" MinWidth="300"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Background="{DynamicResource ThemeSidebarButtonBackground}" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource ThemeBorder}">
                    <DockPanel>
                        <!-- Sidebar Bottom Settings -->
                        <Border DockPanel.Dock="Bottom" Margin="0,10,0,20">
