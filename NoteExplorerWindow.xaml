<Window x:Class="CatchCapture.NoteExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ë‚´ ë…¸íŠ¸ íƒìƒ‰ê¸°" Height="850" Width="1400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- List Mode Item Container Style -->
        <Style x:Key="NoteItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F7F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#EDF2FF"/>
                                <Setter Property="BorderBrush" Value="#D0D7DE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- List Mode Column Styles -->
        <Style x:Key="ListTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- List Mode Template -->
        <DataTemplate x:Key="ListTemplate">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/> <!-- Category/Group -->
                    <ColumnDefinition Width="2*"/>  <!-- Title -->
                    <ColumnDefinition Width="3*"/>  <!-- Content (15 chars) -->
                    <ColumnDefinition Width="150"/> <!-- Date -->
                    <ColumnDefinition Width="60"/>  <!-- Actions -->
                </Grid.ColumnDefinitions>
                
                <!-- Group -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <Ellipse Width="8" Height="8" Fill="{Binding CategoryColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding CategoryName}" Style="{StaticResource ListTextStyle}" Margin="0" Foreground="#666666"/>
                </StackPanel>
                
                <!-- Title -->
                <TextBlock Grid.Column="1" Text="{Binding Title}" Style="{StaticResource ListTextStyle}" FontWeight="SemiBold"/>
                
                <!-- Content (Truncated) -->
                <TextBlock Grid.Column="2" Text="{Binding TruncatedContent}" Style="{StaticResource ListTextStyle}" Foreground="#888888"/>
                
                <!-- Date -->
                <TextBlock Grid.Column="3" Text="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Style="{StaticResource ListTextStyle}" Foreground="#999999" HorizontalAlignment="Center"/>
                
                <!-- Delete Button -->
                <Button Grid.Column="4" Content="âœ•" Click="BtnDeleteItem_Click" Tag="{Binding Id}"
                        Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Cursor="Hand" 
                        FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </DataTemplate>

        <!-- Sidebar Button Style (Indented Left Aligned) -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,10,15,10"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,20,20,0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F2F5"/>
                                <Setter Property="Foreground" Value="#333333"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                <Setter Property="Background" Value="#E8F0FE"/>
                                <Setter Property="Foreground" Value="#1A73E8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Active Button Style -->
        <Style x:Key="SidebarActiveButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#E8F0FE"/>
            <Setter Property="Foreground" Value="#1A73E8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </Window.Resources>

    <Border Background="#FDFDFD" CornerRadius="12" BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Color="Black" Opacity="0.1" ShadowDepth="5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Action Bar -->
                <RowDefinition Height="*"/>    <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- Top Action Bar -->
            <Grid Grid.Row="0" Margin="25,20,25,15">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ë‚´ ë…¸íŠ¸" FontSize="20" FontWeight="Bold" Foreground="#333333" Margin="0,0,20,0"/>
                    
                    <!-- Search Box -->
                    <Border Background="#F1F3F4" CornerRadius="20" Width="300" Height="38" Padding="15,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#5F6368"/>
                            <TextBox x:Name="TxtSearch" Grid.Column="1" Background="Transparent" BorderThickness="0" 
                                     VerticalContentAlignment="Center" FontSize="14" Foreground="#333333"/>
                            <TextBlock Grid.Column="1" Text="ê²€ìƒ‰" Foreground="#9AA0A6" IsHitTestVisible="False" 
                                       VerticalAlignment="Center" Margin="2,0" FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Write Note Button -->
                    <Button x:Name="BtnNewNote" Click="BtnNewNote_Click" Cursor="Hand" Margin="0,0,15,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#8E2DE2" CornerRadius="19" Padding="18,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœï¸" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="14"/>
                                        <TextBlock Text="ë…¸íŠ¸ ì“°ê¸°" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="BtnClose" Width="34" Height="34" Click="BtnClose_Click" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                              Fill="#95A5A6" Stretch="Uniform" Width="14" Height="14"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Workspace -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/> <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>   <!-- Note List -->
                    <ColumnDefinition Width="400"/> <!-- Preview -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border BorderThickness="0,0,1,0" BorderBrush="#F0F0F0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,10,0,0">
                            <Button Content="ðŸ   ì „ì²´ ë…¸íŠ¸" Style="{StaticResource SidebarButtonStyle}" Click="BtnFilter_Click" Tag="All"/>
                            <Button Content="ðŸ“  ê¸°ë³¸ ê·¸ë£¹" Style="{StaticResource SidebarButtonStyle}" Click="BtnFilter_Click" Tag="Default" Foreground="#E74C3C"/>
                            <Button Content="ðŸ“…  ì˜¤ëŠ˜" Style="{StaticResource SidebarButtonStyle}" Click="BtnFilter_Click" Tag="Today"/>
                            <Button Content="ðŸ“…  ìµœê·¼ 7ì¼" Style="{StaticResource SidebarButtonStyle}" Click="BtnFilter_Click" Tag="Recent"/>
                            <Button Content="ðŸš®  íœ´ì§€í†µ" Style="{StaticResource SidebarButtonStyle}" Click="BtnFilter_Click" Tag="Trash"/>
                            
                            <Separator Background="#F0F0F0" Margin="25,15,15,15"/>
                            
                            <TextBlock Text="íƒœê·¸" Foreground="#9AA0A6" FontSize="12" FontWeight="Bold" Margin="25,0,0,10"/>
                            <ItemsControl x:Name="ItemsTags" Margin="15,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Click="BtnTag_Click" Tag="{Binding}" Margin="10,2">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="brd" Padding="12,6" Background="#F1F3F4" CornerRadius="15">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="#" Foreground="#9AA0A6" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{TemplateBinding Content}" Foreground="#5F6368"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="brd" Property="Background" Value="#E8EAED"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Note List Area -->
                <Grid Grid.Column="1" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FBFCFD" Height="40" BorderThickness="0,0,0,1" BorderBrush="#F0F0F0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ê·¸ë£¹" Foreground="#999999" FontSize="12" VerticalAlignment="Center" Margin="25,0,0,0"/>
                            <TextBlock Grid.Column="1" Text="ì œëª©" Foreground="#999999" FontSize="12" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Grid.Column="2" Text="ë‚´ìš©" Foreground="#999999" FontSize="12" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Grid.Column="3" Text="ë§ˆì§€ë§‰ ìˆ˜ì •ì¼" Foreground="#999999" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="ì‚­ì œ" Foreground="#999999" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ListBox x:Name="LstNotes" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                             ItemContainerStyle="{StaticResource NoteItemStyle}" 
                             ItemTemplate="{StaticResource ListTemplate}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="LstNotes_SelectionChanged"
                             MouseDoubleClick="LstNotes_MouseDoubleClick">
                    </ListBox>
                </Grid>

                <!-- Preview Panel -->
                <Border Grid.Column="2" Background="#FBFCFD" BorderThickness="1,0,0,0" BorderBrush="#F0F0F0">
                    <Grid x:Name="PreviewGrid" Margin="25" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Title & App -->
                            <RowDefinition Height="Auto"/> <!-- Date & Tags -->
                            <RowDefinition Height="*"/>    <!-- Scrollable Content -->
                            <RowDefinition Height="Auto"/> <!-- Edit Button -->
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock x:Name="TxtPreviewTitle" Text="ì œëª©" FontSize="20" FontWeight="Bold" Foreground="#333333" TextWrapping="Wrap"/>
                            <TextBlock x:Name="TxtPreviewApp" Text="Source App" FontSize="12" Foreground="#999999" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,0,20">
                            <TextBlock x:Name="TxtPreviewDate" Text="2023-01-01 12:00" FontSize="12" Foreground="#888888"/>
                            <ItemsControl x:Name="PreviewTags" Margin="0,10,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#EEF2FF" CornerRadius="4" Padding="8,3" Margin="0,0,6,6">
                                            <TextBlock Text="{Binding}" Foreground="#5C6BC0" FontSize="11" FontWeight="Medium"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,-15,0" Padding="0,0,15,0">
                            <StackPanel>
                                <!-- Multi-Image Gallery -->
                                <ItemsControl x:Name="PreviewImageGallery" Margin="0,0,0,20">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" Background="White" Margin="10,0,0,12" HorizontalAlignment="Left" MaxWidth="340" BorderThickness="1" BorderBrush="#E0E0E0" ClipToBounds="True">
                                                <Image Source="{Binding}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality">
                                                    <Image.Effect>
                                                        <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.05" ShadowDepth="2"/>
                                                    </Image.Effect>
                                                </Image>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="TxtPreviewContent" Text="Content" 
                                           Foreground="#555555" FontSize="14" TextWrapping="Wrap" LineHeight="22"/>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                             <Button x:Name="BtnEditNote" Content="ìˆ˜ì •í•˜ê¸°" Click="BtnEditNote_Click" 
                                     Background="#F8F9FA" Foreground="#5F6368" Padding="20,10" FontWeight="Bold" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F1F3F4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
