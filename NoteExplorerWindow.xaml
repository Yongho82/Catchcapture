<Window x:Class="CatchCapture.NoteExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ÎÇ¥ ÎÖ∏Ìä∏ ÌÉêÏÉâÍ∏∞" Height="850" Width="1400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- List Mode Item Container Style -->
        <Style x:Key="NoteItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F7F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#EDF2FF"/>
                                <Setter Property="BorderBrush" Value="#D0D7DE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- List Mode Column Styles -->
        <Style x:Key="ListTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- List Mode Template -->
        <DataTemplate x:Key="ListTemplate">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/> <!-- Category/Group -->
                    <ColumnDefinition Width="2*"/>  <!-- Title -->
                    <ColumnDefinition Width="3*"/>  <!-- Content (15 chars) -->
                    <ColumnDefinition Width="150"/> <!-- Date -->
                    <ColumnDefinition Width="60"/>  <!-- Actions -->
                </Grid.ColumnDefinitions>
                
                <!-- Group -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <Ellipse Width="8" Height="8" Fill="{Binding CategoryColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding CategoryName}" Style="{StaticResource ListTextStyle}" Margin="0" Foreground="#666666"/>
                </StackPanel>
                
                <!-- Title -->
                <TextBlock Grid.Column="1" Text="{Binding Title}" Style="{StaticResource ListTextStyle}" FontWeight="SemiBold"/>
                
                <!-- Content (Truncated) -->
                <TextBlock Grid.Column="2" Text="{Binding TruncatedContent}" Style="{StaticResource ListTextStyle}" Foreground="#888888"/>
                
                <!-- Date -->
                <TextBlock Grid.Column="3" Text="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Style="{StaticResource ListTextStyle}" Foreground="#999999" HorizontalAlignment="Center"/>
                
                <!-- Delete Button -->
                <Button Grid.Column="4" Content="‚úï" Click="BtnDeleteItem_Click" Tag="{Binding Id}"
                        Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Cursor="Hand" 
                        FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </DataTemplate>

        <!-- Sidebar Item Style -->
        <Style x:Key="SidebarItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#5F6368"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="FontSize" Value="13"/> <!-- Reduced -1 -->
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F3F4"/>
                                <Setter Property="Foreground" Value="#202124"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Text Button Style (No Border) -->
        <Style x:Key="TextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#5F6368"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontSize" Value="12"/> <!-- Reduced -1 -->
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#202124"/>
                                <Setter Property="Background" Value="#F1F3F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tag Button Style -->
        <Style x:Key="TagButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F1F3F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#5F6368"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8EAED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pagination Button Style -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#5F6368"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="#F1F3F4"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Active">
                                <Setter TargetName="brd" Property="Background" Value="#1A73E8"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FDFDFD" CornerRadius="12" BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Color="Black" Opacity="0.1" ShadowDepth="5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Action Bar -->
                <RowDefinition Height="*"/>    <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- Top Action Bar -->
            <Grid Grid.Row="0" Margin="30,25,30,15">
                <!-- Row 1: Title & Main Buttons -->
                <Grid>
                    <TextBlock Text="ÎÇ¥ ÎÖ∏Ìä∏" FontSize="28" FontWeight="Bold" Foreground="#202124" VerticalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="BtnNewNote" Click="BtnNewNote_Click" Cursor="Hand" Margin="0,0,12,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="brdNewNote" Background="#8E2DE2" CornerRadius="10" Padding="20,10">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" Color="#8E2DE2" Opacity="0.3" ShadowDepth="2"/>
                                        </Border.Effect>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="White" Width="18" Height="18" Margin="0,0,8,0" Stretch="Uniform"/>
                                            <TextBlock Text="ÏÉà ÎÖ∏Ìä∏ ÏûëÏÑ±" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brdNewNote" Property="Background" Value="#7A1DC1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="BtnClose" Width="36" Height="36" Click="BtnClose_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="#95A5A6" Stretch="Uniform" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
            <!-- Separator -->
            <Border Grid.Row="0" Background="#E0E0E0" Height="1" VerticalAlignment="Bottom"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/> <!-- Reduced Sidebar Width -->
                    <ColumnDefinition Width="*"/>   <!-- Note List -->
                    <ColumnDefinition Width="400"/> <!-- Preview -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Background="#F9FAFB" BorderThickness="0,0,1,0" BorderBrush="#E0E0E0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="15,20,5,0">
                            <TextBlock Text="ÌÉêÏÉâ" Foreground="#9AA0A6" FontSize="11" FontWeight="Bold" Margin="15,0,0,10"/>
                            
                            <Button Click="BtnFilter_Click" Tag="All" Style="{StaticResource SidebarItemStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="üè†" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="Ï†ÑÏ≤¥ ÎÖ∏Ìä∏"/>
                                </StackPanel>
                            </Button>
                            <Button Click="BtnFilter_Click" Tag="Default" Style="{StaticResource SidebarItemStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="üìÅ" Margin="0,0,12,0" FontSize="16" Foreground="#E74C3C"/>
                                    <TextBlock Text="Í∏∞Î≥∏ Í∑∏Î£π" Foreground="#E74C3C" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            <Button Click="BtnFilter_Click" Tag="Today" Style="{StaticResource SidebarItemStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="üìÖ" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="Ïò§Îäò"/>
                                </StackPanel>
                            </Button>
                            <Button Click="BtnFilter_Click" Tag="Recent" Style="{StaticResource SidebarItemStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="üïí" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="ÏµúÍ∑º 7Ïùº"/>
                                </StackPanel>
                            </Button>
                            <Button Click="BtnFilter_Click" Tag="Trash" Style="{StaticResource SidebarItemStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="üöÆ" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="Ìú¥ÏßÄÌÜµ"/>
                                </StackPanel>
                            </Button>
                            
                            <Separator Background="#E0E0E0" Margin="10,20"/>
                            
                            <TextBlock Text="ÌÉúÍ∑∏" Foreground="#9AA0A6" FontSize="11" FontWeight="Bold" Margin="15,0,0,10"/>
                            <ItemsControl x:Name="ItemsTags" Margin="10,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Click="BtnTag_Click" Tag="{Binding}" Margin="0,0,6,6" Style="{StaticResource TagButtonStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="#" Foreground="#9AA0A6" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding}"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Note List Area -->
                <Grid Grid.Column="1" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Top Controls (Batch & Search) -->
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- List -->
                        <RowDefinition Height="Auto"/> <!-- Pagination -->
                    </Grid.RowDefinitions>

                    <!-- Row 0: Top Controls -->
                    <Grid Grid.Row="0" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Batch Buttons (Simple Text) -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,0,0,0">
                            <Button x:Name="BtnSelectAll" Click="BtnSelectAll_Click" Content="Ï†ÑÏ≤¥ ÏÑ†ÌÉù" Style="{StaticResource TextButtonStyle}" Margin="0,0,8,0"/>
                            <Button x:Name="BtnUnselectAll" Click="BtnUnselectAll_Click" Content="ÏÑ†ÌÉù Ìï¥Ï†ú" Style="{StaticResource TextButtonStyle}" Margin="0,0,8,0"/>
                            <Button x:Name="BtnDeleteSelected" Click="BtnDeleteSelected_Click" Content="ÏÑ†ÌÉù ÏÇ≠Ï†ú" Foreground="#D93025" Style="{StaticResource TextButtonStyle}" Margin="0,0,8,0"/>
                        </StackPanel>

                        <!-- Right: Status Text & Search Box -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtStatusInfo" Text="ÏµúÍ∑º 1Ï£ºÏùº Í∏∞Î°ù ÎÇ¥Ïö©" VerticalAlignment="Center" Foreground="#9AA0A6" FontSize="12" Margin="0,0,15,0"/>
                            
                            <Border Background="#F1F3F4" CornerRadius="4" Height="32" Width="220">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtSearch" Grid.Column="0" Background="Transparent" BorderThickness="0" 
                                             VerticalContentAlignment="Center" FontSize="13" Foreground="#3C4043" Margin="10,0,0,0"
                                             KeyDown="TxtSearch_KeyDown"/>
                                    <TextBlock Grid.Column="0" Text="Í≤ÄÏÉâ..." Foreground="#9AA0A6" IsHitTestVisible="False" 
                                               VerticalAlignment="Center" Margin="12,0" FontSize="13">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Button Grid.Column="1" x:Name="BtnSearch" Click="BtnSearch_Click" 
                                            Background="Transparent" BorderThickness="0" Padding="8,0" Cursor="Hand">
                                        <TextBlock Text="üîç" FontSize="14" Foreground="#5F6368"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Column Headers -->
                    <Border Grid.Row="1" Background="#F8F9FA" Height="45" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="28"/> <!-- Optimized Checkbox Width -->
                                <ColumnDefinition Width="100"/> <!-- Group -->
                                <ColumnDefinition Width="2*"/>  <!-- Title -->
                                <ColumnDefinition Width="3*"/>  <!-- Content -->
                                <ColumnDefinition Width="150"/> <!-- Date -->
                                <ColumnDefinition Width="60"/>  <!-- Actions -->
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="ChkSelectAllHeader" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Click="BtnSelectAll_Click"
                                      Visibility="{Binding IsSelectionMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                            <TextBlock Grid.Column="1" Text="Í∑∏Î£π" Foreground="#5F6368" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBlock Grid.Column="2" Text="Ï†úÎ™©" Foreground="#5F6368" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Grid.Column="3" Text="ÎÇ¥Ïö©" Foreground="#5F6368" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Grid.Column="4" Text="ÎßàÏßÄÎßâ ÏàòÏ†ïÏùº" Foreground="#5F6368" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ListBox x:Name="LstNotes" Grid.Row="2" Background="Transparent" BorderThickness="0" 
                              ItemContainerStyle="{StaticResource NoteItemStyle}" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionMode="Extended"
                              SelectionChanged="LstNotes_SelectionChanged"
                              MouseDoubleClick="LstNotes_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="50" Background="Transparent"> <!-- Reduced height from 65 -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="28"/> <!-- Optimized Checkbox Width -->
                                        <ColumnDefinition Width="100"/> <!-- Group -->
                                        <ColumnDefinition Width="2*"/>  <!-- Title -->
                                        <ColumnDefinition Width="3*"/>  <!-- Content -->
                                        <ColumnDefinition Width="150"/> <!-- Date -->
                                        <ColumnDefinition Width="60"/>  <!-- Actions -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- CheckBox -->
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                              Visibility="{Binding DataContext.IsSelectionMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>

                                    <!-- Group -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                                        <Ellipse Width="10" Height="10" Fill="{Binding CategoryColor}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding CategoryName}" Foreground="#5F6368" FontSize="13" FontWeight="Medium"/>
                                    </StackPanel>

                                    <!-- Title -->
                                    <TextBlock Grid.Column="2" Text="{Binding Title}" FontWeight="SemiBold" Foreground="#202124" FontSize="14" 
                                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Margin="10,0"/>

                                    <!-- Content -->
                                    <TextBlock Grid.Column="3" Text="{Binding TruncatedContent}" Foreground="#5F6368" FontSize="13" 
                                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Margin="10,0"/>

                                    <!-- Date -->
                                    <TextBlock Grid.Column="4" Text="{Binding FormattedDate}" Foreground="#80868B" FontSize="12" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                    <!-- Delete Button -->
                                    <Button Grid.Column="5" Click="BtnDeleteItem_Click" Tag="{Binding Id}" 
                                            Background="Transparent" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="brd" Width="32" Height="32" Background="Transparent" CornerRadius="16">
                                                    <Path x:Name="path" Data="M6,19c0,1.1,0.9,2,2,2h8c1.1,0,2,-0.9,2,-2V7H6V19z M19,4h-3.5l-1,-1h-5l-1,1H5v2h14V4z" 
                                                          Fill="#95A5A6" Width="18" Height="18" Stretch="Uniform"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="brd" Property="Background" Value="#FEEBEE"/>
                                                        <Setter TargetName="path" Property="Fill" Value="#D93025"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Border Grid.ColumnSpan="6" BorderThickness="0,0,0,1" BorderBrush="#F1F3F4" VerticalAlignment="Bottom"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="3" Background="#F8F9FA" Height="50" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
                        <!-- Pagination -->
                        <StackPanel x:Name="PanelPagination" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Populated from code-behind -->
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Column="2" Background="#FBFCFD" BorderThickness="1,0,0,0" BorderBrush="#F0F0F0">
                    <Grid x:Name="PreviewGrid" Margin="20,15" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Title & App -->
                            <RowDefinition Height="Auto"/> <!-- Date & Tags -->
                            <RowDefinition Height="*"/>    <!-- Scrollable Content -->
                            <RowDefinition Height="Auto"/> <!-- Edit Button -->
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock x:Name="TxtPreviewTitle" Text="Ï†úÎ™©" FontSize="22" FontWeight="Bold" Foreground="#202124" TextWrapping="Wrap"/>
                            <TextBlock x:Name="TxtPreviewApp" Text="Source App" FontSize="13" Foreground="#80868B" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock x:Name="TxtPreviewDate" Text="2023-01-01 12:00" FontSize="12" Foreground="#9AA0A6"/>
                            <ItemsControl x:Name="PreviewTags" Margin="0,10,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F1F3F4" CornerRadius="12" Padding="10,4" Margin="0,0,8,8">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="#" Foreground="#9AA0A6" Margin="0,0,2,0" FontSize="12"/>
                                                <TextBlock Text="{Binding}" Foreground="#5F6368" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Attachments Preview -->
                            <ItemsControl x:Name="PreviewAttachments" Margin="0,5,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
