<Window x:Class="CatchCapture.TrayModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="캐치캡처" Height="600" Width="60" 
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Deactivated="Window_Deactivated">
    
    <Window.Resources>
        <!-- 아이콘 버튼 스타일 -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0DAFF" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="White" CornerRadius="12" BorderThickness="1" BorderBrush="#E0E6F0">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3" Direction="270"/>
        </Border.Effect>
        
        <Grid Margin="10,15">
            <StackPanel VerticalAlignment="Top">
                <!-- 영역 캡처 -->
                <Button x:Name="AreaCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="AreaCaptureButton_Click" ToolTip="영역 캡처">
                    <Image Source="/icons/area_capture.png" Width="24" Height="24" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 지연 캡처 -->
                <Button x:Name="DelayCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DelayCaptureButton_Click" ToolTip="지연 캡처">
                    <Image Source="/icons/clock.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 전체화면 -->
                <Button x:Name="FullScreenButton" Style="{StaticResource IconButtonStyle}" 
                        Click="FullScreenButton_Click" ToolTip="전체화면">
                    <Image Source="/icons/full_screen.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 지정캡처 -->
                <Button x:Name="DesignatedCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DesignatedCaptureButton_Click" ToolTip="지정캡처">
                    <Image Source="/icons/area_capture.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 구분선 -->
                <Separator Margin="5,10" Background="#E0E6F0" Height="1"/>
                
                <!-- 복사 -->
                <Button x:Name="CopyButton" Style="{StaticResource IconButtonStyle}" 
                        Click="CopyButton_Click" ToolTip="복사">
                    <Image Source="/icons/copy_selected.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 전체복사 -->
                <Button x:Name="CopyAllButton" Style="{StaticResource IconButtonStyle}" 
                        Click="CopyAllButton_Click" ToolTip="전체복사">
                    <Image Source="/icons/copy_all.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 구분선 -->
                <Separator Margin="5,10" Background="#E0E6F0" Height="1"/>
                
                <!-- 저장 -->
                <Button x:Name="SaveButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SaveButton_Click" ToolTip="저장">
                    <Image Source="/icons/save_selected.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 전체저장 -->
                <Button x:Name="SaveAllButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SaveAllButton_Click" ToolTip="전체저장">
                    <Image Source="/icons/save_all.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 구분선 -->
                <Separator Margin="5,10" Background="#E0E6F0" Height="1"/>
                
                <!-- 삭제 -->
                <Button x:Name="DeleteButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DeleteButton_Click" ToolTip="삭제">
                    <Image Source="/icons/delete_selected.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 전체삭제 -->
                <Button x:Name="DeleteAllButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DeleteAllButton_Click" ToolTip="전체삭제">
                    <Image Source="/icons/delete_all.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 구분선 -->
                <Separator Margin="5,10" Background="#E0E6F0" Height="1"/>
                
                <!-- 간편 모드 -->
                <Button x:Name="SimpleModeButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SimpleModeButton_Click" ToolTip="간편 모드">
                    <Image Source="/icons/simple_mode.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- 설정 -->
                <Button x:Name="SettingsButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SettingsButton_Click" ToolTip="설정">
                    <Image Source="/icons/clock.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
