<Window x:Class="CatchCapture.TrayModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="600" Width="56" 
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Deactivated="Window_Deactivated"
        SnapsToDevicePixels="True">
    
    <Window.Resources>
        <!-- ì•„ì´ì½˜ ë²„íŠ¼ ìŠ¤íƒ€ì¼ -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ìƒë‹¨ ìž‘ì€ ë²„íŠ¼ ìŠ¤íƒ€ì¼ -->
        <Style x:Key="SmallIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ì ‘ê¸°/íŽ¼ì¹˜ê¸° ë²„íŠ¼ ì „ìš© ìŠ¤íƒ€ì¼ -->
        <Style x:Key="TinyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ContextMenu style -->
        <Style x:Key="DarkContextMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Dark MenuItem style (icon column collapses when no Icon) -->
        <Style x:Key="DarkMenuItem" TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Icon" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="IconHost" Grid.Column="0" Width="24" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
                                    <ContentPresenter ContentSource="Icon" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ContentPresenter Grid.Column="1" ContentSource="Header" Margin="6,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#3F3F46"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="Icon" Value="{x:Null}">
                                <Setter TargetName="IconHost" Property="Width" Value="0"/>
                                <Setter TargetName="IconHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark Separator -->
        <Style x:Key="DarkSeparator" TargetType="Separator">
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Background" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="Height" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorder}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3" Direction="270"/>
        </Border.Effect>
        
        <Grid Margin="2,5">
            <StackPanel x:Name="ButtonsPanel" VerticalAlignment="Top">
                <!-- ìƒë‹¨ ì»¨íŠ¸ë¡¤ (ì¼ë°˜ëª¨ë“œ / ê°„íŽ¸ëª¨ë“œ) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,1">
                    <!-- ì¼ë°˜ ëª¨ë“œ ì „í™˜ ë²„íŠ¼ -->
                    <Button x:Name="SwitchToNormalModeButton" Style="{StaticResource SmallIconButtonStyle}" 
                            Click="SwitchToNormalModeButton_Click">
                        <Image Source="/icons/normal_mode.png" Width="14" Height="14"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>

                    <!-- ê°„íŽ¸ ëª¨ë“œ ë²„íŠ¼ -->
                    <Button x:Name="SimpleModeButton" Style="{StaticResource SmallIconButtonStyle}" 
                            Click="SimpleModeButton_Click">
                        <Image Source="/icons/simple_mode.png" Width="14" Height="14"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>
                </StackPanel>

                <!-- ì¦‰ì‹œíŽ¸ì§‘ ìŠ¤ìœ„ì¹˜ -->
                <Border Width="30" Height="16" CornerRadius="8" Background="{DynamicResource ThemeBorder}" 
                        Cursor="Hand" Margin="0,5"
                        x:Name="InstantEditToggleBorder" MouseLeftButtonDown="InstantEditToggle_Click">
                    <Ellipse x:Name="InstantEditToggleCircle" Width="12" Height="12" 
                             Fill="White" HorizontalAlignment="Left" Margin="2,0,0,0">
                        <Ellipse.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Border>

                <!-- í•­ìƒ ìœ„ í† ê¸€ ë²„íŠ¼ -->
                <Button x:Name="TopmostButton" Style="{StaticResource TinyButtonStyle}" 
                        Click="TopmostButton_Click">
                    <TextBlock x:Name="TopmostIcon" Text="ðŸ“Œ" FontSize="18" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                </Button>
                
                <!-- ìº¡ì²˜ ì¹´ìš´í„° ë²„íŠ¼ -->
                <Button x:Name="CaptureCounterButton" Style="{StaticResource TinyButtonStyle}" 
                        Click="CaptureCounterButton_Click">
                    <TextBlock x:Name="CaptureCountText" 
                               Text="0" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource ThemeForeground}"/>
                </Button>

                <!-- êµ¬ë¶„ì„  -->
                <Separator Margin="5,10" Background="{DynamicResource ThemeBorder}" Height="1"/>
                
                <!-- ì˜ì—­ ìº¡ì²˜ -->
                <Button x:Name="AreaCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="AreaCaptureButton_Click">
                    <Image Source="/icons/area_capture.png" Width="24" Height="24" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ì§€ì—° ìº¡ì²˜ -->
                <Button x:Name="DelayCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DelayCaptureButton_Click">
                    <Button.ContextMenu>
                        <ContextMenu Style="{StaticResource DarkContextMenu}">
                            <MenuItem x:Name="DelayNoneMenuItem" Header="" Tag="0" Click="DelayMenuItem_Click" Style="{StaticResource DarkMenuItem}"/>
                            <MenuItem x:Name="Delay3MenuItem" Header="" Tag="3" Click="DelayMenuItem_Click" Style="{StaticResource DarkMenuItem}"/>
                            <MenuItem x:Name="Delay5MenuItem" Header="" Tag="5" Click="DelayMenuItem_Click" Style="{StaticResource DarkMenuItem}"/>
                            <MenuItem x:Name="Delay10MenuItem" Header="" Tag="10" Click="DelayMenuItem_Click" Style="{StaticResource DarkMenuItem}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                    <Image Source="/icons/clock.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ì „ì²´í™”ë©´ -->
                <Button x:Name="FullScreenButton" Style="{StaticResource IconButtonStyle}" 
                        Click="FullScreenButton_Click">
                    <Image Source="/icons/full_screen.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ì§€ì •ìº¡ì²˜ -->
                <Button x:Name="DesignatedCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DesignatedCaptureButton_Click">
                    <Image Source="/icons/area_capture.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- ì°½ ìº¡ì²˜ -->
                <Button x:Name="WindowCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="WindowCaptureButton_Click">
                    <Image Source="/icons/window_capture.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- ë‹¨ìœ„ ìº¡ì²˜ -->
                <Button x:Name="UnitCaptureButton" Style="{StaticResource IconButtonStyle}" 
                        Click="UnitCaptureButton_Click">
                    <Image Source="/icons/unit_capture.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- êµ¬ë¶„ì„  -->
                <Separator Margin="5,10" Background="{DynamicResource ThemeBorder}" Height="1"/>
                
                <!-- ë³µì‚¬ -->
                <Button x:Name="CopyButton" Style="{StaticResource IconButtonStyle}" 
                        Click="CopyButton_Click">
                    <Image Source="/icons/copy_selected.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ì „ì²´ë³µì‚¬ -->
                <Button x:Name="CopyAllButton" Style="{StaticResource IconButtonStyle}" 
                        Click="CopyAllButton_Click">
                    <Image Source="/icons/copy_all.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- êµ¬ë¶„ì„  -->
                <Separator Margin="5,10" Background="{DynamicResource ThemeBorder}" Height="1"/>
                
                <!-- ì €ìž¥ -->
                <Button x:Name="SaveButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SaveButton_Click">
                    <Image Source="/icons/save_selected.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ì „ì²´ì €ìž¥ -->
                <Button x:Name="SaveAllButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SaveAllButton_Click">
                    <Image Source="/icons/save_all.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- êµ¬ë¶„ì„  -->
                <Separator Margin="5,10" Background="{DynamicResource ThemeBorder}" Height="1"/>
                
                <!-- ì‚­ì œ -->
                <Button x:Name="DeleteButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DeleteButton_Click">
                    <Image Source="/icons/delete_selected.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ì „ì²´ì‚­ì œ -->
                <Button x:Name="DeleteAllButton" Style="{StaticResource IconButtonStyle}" 
                        Click="DeleteAllButton_Click">
                    <Image Source="/icons/delete_all.png" Width="24" Height="24"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                
                <!-- ë‚˜ê°€ê¸° ë²„íŠ¼ (íŠ¸ë ˆì´ë¡œ) -->
                <Button x:Name="HideToTrayButton" Style="{StaticResource TinyButtonStyle}" 
                        Click="HideToTrayButton_Click">
                    <Image Source="/icons/exit_tray.png" Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- ì„¤ì • -->
                <Button x:Name="SettingsButton" Style="{StaticResource IconButtonStyle}" 
                        Click="SettingsButton_Click">
                <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Foreground="{DynamicResource ThemeForeground}"/>
                </Button>
                
                <!-- ì ‘ê¸°/íŽ¼ì¹˜ê¸° ë²„íŠ¼ -->
                <Button x:Name="FoldButton" Style="{StaticResource TinyButtonStyle}" 
                        Click="FoldButton_Click">
                    <TextBlock x:Name="FoldIcon" Text="â–¼" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ThemeForeground}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
