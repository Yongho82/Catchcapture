<Window x:Class="CatchCapture.HistoryItemPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="clr-namespace:CatchCapture.Utilities"
        mc:Ignorable="d"
        Title="ë¯¸ë¦¬ë³´ê¸°" Width="1000" MinWidth="600" Height="800" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="8" 
                      CornerRadius="12" 
                      GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12" BorderThickness="1" BorderBrush="{DynamicResource ThemeWindowBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Color="Black" Opacity="0.1" ShadowDepth="5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{DynamicResource ThemeTitleBackground}" CornerRadius="12,12,0,0" Height="40" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorder}">
                <Grid>
                    <TextBlock Text="{Binding FileName}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ThemeTitleForeground}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,10,0">
                        <Button x:Name="BtnMinimize" Width="36" Height="36" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BtnMinimize_Click">
                            <Path Data="M20,14H4V10H20V14Z" Fill="{DynamicResource ThemeTitleForeground}" Opacity="0.8" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>
                        <Button x:Name="BtnMaximize" Width="36" Height="36" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BtnMaximize_Click">
                            <Path x:Name="PathMaximize" Data="M4,4H20V20H4V4M6,6V18H18V6H6Z" Fill="{DynamicResource ThemeTitleForeground}" Opacity="0.8" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>
                        <Button x:Name="BtnClose" Width="36" Height="36" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="BtnClose_Click">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="{DynamicResource ThemeTitleForeground}" Opacity="0.8" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content (Copied from HistoryWindow Preview Pane) -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>   <!-- Image -->
                    <RowDefinition Height="Auto"/> <!-- Simple Memo -->
                    <RowDefinition Height="Auto"/> <!-- Details -->
                </Grid.RowDefinitions>

                <!-- Image Display -->
                <Border Grid.Row="0" Margin="15" Background="#08000000" CornerRadius="8">
                    <Grid Background="Transparent">
                         <Image x:Name="ImgPreview" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        
                        <!-- [ì¶”ê°€] ë¯¸ë””ì–´ìš© ì˜¤ë²„ë ˆì´ -->
                        <Grid x:Name="MediaOverlay" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
                            <!-- Play Button -->
                            <Grid x:Name="VideoPlayOverlay">
                                <Ellipse Width="60" Height="60" Fill="#B4000000" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="â–¶" FontSize="28" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>
                            <!-- Audio Icon -->
                            <TextBlock x:Name="AudioIconOverlay" Text="ðŸ”Š" FontSize="80" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                            
                            <!-- Format Badge -->
                            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" 
                                    Background="#C84361EE" CornerRadius="4" Padding="8,4">
                                <TextBlock x:Name="TxtPreviewFormat" Text="MP4" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </Grid>

                        <!-- Interactive Buttons Overlay -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
                            <Button x:Name="BtnPreviewEdit" Click="BtnPreviewEdit_Click" Width="36" Height="36" Margin="0,0,8,0" Background="#CC2D2D30" BorderThickness="0" Cursor="Hand" ToolTip="ì´ë¯¸ì§€ íŽ¸ì§‘">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="18"/>
                                    </Style>
                                </Button.Resources>
                                <Image Source="icons/img_editor.png" Width="18" Height="18" Stretch="Uniform"/>
                            </Button>
                            <Button x:Name="BtnPreviewNote" Click="BtnPreviewNote_Click" Width="36" Height="36" Margin="0,0,8,0" Background="#CC2D2D30" BorderThickness="0" Cursor="Hand" ToolTip="ë‚´ ë…¸íŠ¸ë¡œ ì €ìž¥">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="18"/>
                                    </Style>
                                </Button.Resources>
                                <Image Source="icons/my_note.png" Width="18" Height="18" Stretch="Uniform"/>
                            </Button>
                            <Button x:Name="BtnPreviewPin" Click="BtnPreviewPin_Click" Width="36" Height="36" Background="#CC2D2D30" BorderThickness="0" Cursor="Hand" ToolTip="í™”ë©´ì— ê³ ì •">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="18"/>
                                    </Style>
                                </Button.Resources>
                                <Image Source="icons/pin.png" Width="18" Height="18" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Simple Memo (Above Details) -->
                <Border Grid.Row="1" Padding="20,15,20,5">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <TextBlock x:Name="TxtSimpleMemoLabel" Text="ê°„ë‹¨ ë©”ëª¨" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center"/>
                            <Button x:Name="BtnEditMemo" Click="BtnEditMemo_Click" Content="ìˆ˜ì •" HorizontalAlignment="Right" Background="Transparent" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Padding="8,2" Foreground="{DynamicResource ThemeForeground}" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                        
                        <Grid x:Name="MemoEditArea">
                            <ScrollViewer x:Name="ScrollMemoDisplay" MaxHeight="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,10">
                                <TextBlock x:Name="TxtMemoDisplay" Text="ë©”ëª¨ê°€ ì—†ìŠµë‹ˆë‹¤." TextWrapping="Wrap" Foreground="{DynamicResource ThemeForeground}" Opacity="0.7" MinHeight="30"/>
                            </ScrollViewer>
                            <TextBox x:Name="EditMemoBox" Visibility="Collapsed" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60" MaxHeight="120" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" Background="{DynamicResource ThemeSidebarButtonBackground}" BorderBrush="{DynamicResource ThemeBorder}" Foreground="{DynamicResource ThemeForeground}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Details (Bottom) -->
                <Border Grid.Row="2" Padding="20" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource ThemeBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtDetailsLabel" Text="ìƒì„¸ ì •ë³´" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource ThemeForeground}"/>
                            <Grid Margin="0,0,0,5">
                                <TextBlock x:Name="TxtSizeLabel" Text="í¬ê¸°:" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                                <TextBlock x:Name="TxtPreviewSize" Text="-" HorizontalAlignment="Right" Foreground="{DynamicResource ThemeForeground}"/>
                            </Grid>
                            <Grid Margin="0,0,0,5">
                                <TextBlock x:Name="TxtCapacityLabel" Text="ìš©ëŸ‰:" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                                <TextBlock x:Name="TxtPreviewWeight" Text="-" HorizontalAlignment="Right" Foreground="{DynamicResource ThemeForeground}"/>
                            </Grid>
                            <Grid Margin="0,0,0,5">
                                <TextBlock x:Name="TxtAppLabel" Text="ì•±:" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                                <TextBlock x:Name="TxtPreviewApp" Text="-" HorizontalAlignment="Right" Foreground="{DynamicResource ThemeForeground}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                             <TextBlock x:Name="TxtPathLabel" Text="ìƒì„¸ ê²½ë¡œ" FontSize="11" Opacity="0.6" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,0,5"/>
                             <Grid>
                                 <TextBlock x:Name="TxtPreviewPath" Text="-" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis" Margin="0,0,25,0"/>
                                 <Button x:Name="BtnOpenFolder" Click="BtnOpenFolder_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top">
                                     <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                                           Fill="#FFD600" Width="16" Height="16" Stretch="Uniform"/>
                                 </Button>
                             </Grid>
                             <TextBlock x:Name="TxtTitleLabel" Text="ì „ì²´ ì œëª©:" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" Margin="0,5,0,0"/>
                             <TextBlock x:Name="TxtPreviewTitle" Text="-" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" FontWeight="SemiBold" Foreground="{DynamicResource ThemeForeground}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
