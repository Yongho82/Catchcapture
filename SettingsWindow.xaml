<Window x:Class="CatchCapture.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource SettingsWindowTitle}" Height="600" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{DynamicResource ThemeBackground}"
        FontFamily="Malgun Gothic, Segoe UI">

    <Window.Resources>
        <!-- Colors -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ThemeBorder}"/>
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MacButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MacButtonSecondary" TargetType="Button" BasedOn="{StaticResource MacButtonPrimary}">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ThemeBorder}"/>
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Grid VerticalAlignment="Center" Width="18" Height="18">
                                <Border x:Name="checkBoxBorder" 
                                        Width="16" Height="16" 
                                        CornerRadius="4" 
                                        BorderThickness="1.2" 
                                        BorderBrush="{DynamicResource ThemeBorder}" 
                                        Background="White"
                                        SnapsToDevicePixels="True">
                                    <Grid>
                                        <!-- í•˜ì´ê·¸ë¡œì‹œ ê´‘íƒ ì˜¤ë²„ë ˆì´ (ë¶€ë“œëŸ½ê²Œ ì¡°ì •) -->
                                        <Border x:Name="glossyOverlay" CornerRadius="3" Opacity="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="0.4"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <!-- ì²´í¬ í‘œì‹œ (í¬ê¸° ì¶•ì†Œ ë° ì¤‘ì•™ ì •ë ¬ ìµœì í™”) -->
                                        <Path x:Name="checkMark" 
                                              Data="M 4.5,8.5 L 7.5,11.5 L 12.5,6.5" 
                                              Stroke="White" 
                                              StrokeThickness="1.8" 
                                              StrokeStartLineCap="Round" 
                                              StrokeEndLineCap="Round" 
                                              StrokeLineJoin="Round"
                                              Visibility="Collapsed" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="-0.5,0,0,0.5"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#70BFFF" Offset="0"/>
                                            <GradientStop Color="#4090FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#3080EF"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="glossyOverlay" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" Background="Transparent" Margin="0,3">
                            <Grid VerticalAlignment="Center" Width="18" Height="18">
                                <Ellipse x:Name="OuterEllipse" 
                                         Width="16" Height="16" 
                                         Stroke="{DynamicResource ThemeBorder}" 
                                         StrokeThickness="1.2" 
                                         Fill="White"/>
                                <Ellipse x:Name="InnerEllipse" 
                                         Width="8" Height="8" 
                                         Visibility="Collapsed">
                                    <Ellipse.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#70BFFF" Offset="0"/>
                                            <GradientStop Color="#4090FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterEllipse" Property="Stroke" Value="#4090FF"/>
                                <Setter TargetName="InnerEllipse" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterEllipse" Property="Stroke" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.RowSpan="2" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Margin="0,8,0,0"/>
                            <Border Grid.Row="0" HorizontalAlignment="Left" Background="{DynamicResource ThemeBackground}" Margin="12,0,0,0" Padding="5,0">
                                <ContentPresenter ContentSource="Header" RecognizesAccessKey="True" TextElement.Foreground="{DynamicResource ThemeForeground}" TextElement.FontWeight="SemiBold"/>
                            </Border>
                            <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <ControlTemplate x:Key="FormatInfoPopupContent">
            <Border Background="{DynamicResource ThemeBackground}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" CornerRadius="8" Padding="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{DynamicResource SettingsFormatGuide}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" Foreground="{DynamicResource ThemeForeground}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        
                        <!-- Headers -->
                        <TextBlock Text="{DynamicResource SettingsColFormat}" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsColTransparent}" FontWeight="Bold" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsColAnimation}" FontWeight="Bold" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsColQuality}" FontWeight="Bold" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsColCompression}" FontWeight="Bold" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}"/>
                        <Rectangle Grid.Row="0" Grid.ColumnSpan="5" VerticalAlignment="Bottom" Height="1" Fill="{DynamicResource ThemeBorder}"/>

                        <!-- PNG -->
                        <TextBlock Text="PNG" FontWeight="SemiBold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="O" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="X" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsValHigh}" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsPnGEfficiency}" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8"/>

                        <!-- JPG -->
                        <TextBlock Text="JPG" FontWeight="SemiBold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="X" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="X" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsValMidHigh}" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsJpgEfficiency}" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8"/>
                        
                        <!-- BMP -->
                        <TextBlock Text="BMP" FontWeight="SemiBold" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="X" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="X" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsValUltra}" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsBmpEfficiency}" Grid.Row="3" Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8"/>

                        <!-- GIF -->
                        <TextBlock Text="GIF" FontWeight="SemiBold" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="O" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="O" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsValLow}" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsGifEfficiency}" Grid.Row="4" Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8"/>

                        <!-- WEBP -->
                        <TextBlock Text="WEBP" FontWeight="SemiBold" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,20,0"/>
                        <TextBlock Text="O" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="O" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsValHigh}" Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8" Margin="0,0,20,0"/>
                        <TextBlock Text="{DynamicResource SettingsWebpEfficiency}" Grid.Row="5" Grid.Column="4" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.8"/>
                    </Grid>
                </StackPanel>
            </Border>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource ThemeBackground}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,1,0">
            <DockPanel Margin="0,30,0,20">
                <!-- Bottom Info - DockPanel.Dock="Bottom" -->
                <StackPanel DockPanel.Dock="Bottom" Margin="25,0,0,0">
                     <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock x:Name="VersionText" Text="{DynamicResource Version}" FontSize="12" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center"/>
                        <TextBlock Text=" 1.1.20" FontSize="12" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="WebsiteIcon" Text="ðŸ " FontSize="14" Margin="10,0,0,0" Cursor="Hand" VerticalAlignment="Center" 
                                   Foreground="{DynamicResource ThemeForeground}" Opacity="0.8"
                                   MouseLeftButtonUp="Website_Click" ToolTip="{DynamicResource VisitHomepage}"/>
                     </StackPanel>
                     <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="RestoreDefaultsText" Text="{DynamicResource RestoreDefaults}" FontSize="11" Foreground="{DynamicResource ThemeForeground}" Cursor="Hand" MouseLeftButtonUp="RestoreDefaults_Click"/>
                        <TextBlock Text="  |  " FontSize="11" Foreground="{DynamicResource ThemeForeground}"/>
                        <TextBlock x:Name="PrivacyPolicyText" Text="{DynamicResource PrivacyPolicy}" FontSize="11" Foreground="{DynamicResource ThemeForeground}" Cursor="Hand" MouseLeftButtonUp="PrivacyPolicy_Click"/>
                     </StackPanel>
                </StackPanel>
                
                <!-- Top Content -->
                <StackPanel>
                    <!-- App Logo/Title -->
                    <StackPanel Orientation="Horizontal" Margin="25,0,0,30">
                        <Image Source="/Icons/camera.png" Width="24" Height="24" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock x:Name="SidebarAppNameText" Text="CatchCapture" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Navigation -->
                    <TextBlock x:Name="SidebarGeneralText" Text="" Visibility="Collapsed" FontSize="12" Foreground="{DynamicResource ThemeForeground}" Margin="25,0,0,5" FontWeight="SemiBold"/>
                    <Button x:Name="NavSystem" Content="{DynamicResource SystemSettings}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="System"/>
                    <Button x:Name="NavCapture" Content="{DynamicResource CaptureSettings}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Capture"/>
                    <Button x:Name="NavTheme" Content="{DynamicResource ThemeSettings}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Theme" />
                    <Button x:Name="NavMenuEdit" Content="{DynamicResource MenuEdit}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="MenuEdit"/>
                    <Button x:Name="NavRecording" Content="{DynamicResource RecordingSettings}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Recording"/>
                    <Button x:Name="NavNote" Content="{DynamicResource NoteSettings}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Note"/>
                    <Button x:Name="NavHotkey" Content="{DynamicResource Hotkeys}" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Hotkey"/>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1" Margin="30,30,30,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Capture Page -->
            <Border x:Name="PageCapture" Grid.Row="0" Background="{DynamicResource ThemeBackground}" CornerRadius="8" Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock x:Name="CaptureSectionTitle" Text="{DynamicResource CaptureSettings}" Style="{StaticResource SectionTitle}"/>
                    
                    <GroupBox x:Name="SaveSettingsGroup" Header="{DynamicResource SaveSettings}" Margin="0,0,0,10" BorderBrush="{DynamicResource ThemeBorder}" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="SavePathText" Text="{DynamicResource SavePath}" Foreground="{DynamicResource ThemeForeground}" Opacity="0.7" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtFolder" Height="30" VerticalContentAlignment="Center" Padding="5,0" IsReadOnly="True" Background="Transparent" Foreground="{DynamicResource ThemeForeground}" BorderBrush="{DynamicResource ThemeBorder}"/>
                                <Button x:Name="BtnBrowse" Grid.Column="1" Content="{DynamicResource Change}" Margin="10,0,0,0" Padding="10,0" Click="BtnBrowse_Click" Style="{StaticResource MacButtonSecondary}" Height="30"/>
                            </Grid>
                            
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock x:Name="FileFormatText" Grid.Column="0" Text="{DynamicResource FileFormat}" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,10,0"/>
                                <ComboBox x:Name="CboFormat" Grid.Column="1" SelectionChanged="CboFormat_SelectionChanged">
                                    <ComboBoxItem Content="PNG"/>
                                    <ComboBoxItem Content="JPG"/>
                                    <ComboBoxItem Content="BMP"/>
                                    <ComboBoxItem Content="GIF"/>
                                    <ComboBoxItem Content="WEBP"/>
                                </ComboBox>

                                <TextBlock x:Name="QualityText" Grid.Column="3" Text="{DynamicResource Quality}" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Margin="0,0,10,0"/>
                                <ComboBox x:Name="CboQuality" Grid.Column="4" Height="26">
                                    <ComboBoxItem Content="100%" Tag="100" IsSelected="True"/>
                                    <ComboBoxItem Content="90%" Tag="90"/>
                                    <ComboBoxItem Content="80%" Tag="80"/>
                                    <ComboBoxItem Content="70%" Tag="70"/>
                                    <ComboBoxItem Content="60%" Tag="60"/>
                                    <ComboBoxItem Content="50%" Tag="50"/>
                                    <ComboBoxItem Content="40%" Tag="40"/>
                                    <ComboBoxItem Content="30%" Tag="30"/>
                                    <ComboBoxItem Content="20%" Tag="20"/>
                                    <ComboBoxItem Content="10%" Tag="10"/>
                                </ComboBox>
                                
                                <Button x:Name="BtnFormatInfo" Grid.Column="5" Width="Auto" Height="20" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Padding="5,0" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Click="BtnFormatInfo_Click" ToolTip="{DynamicResource SettingsFormatFeatures}">
                                    <TextBlock Text="{DynamicResource SettingsFormatFeatures}" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                                </Button>
                                <Popup x:Name="FormatInfoPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=BtnFormatInfo}" Placement="Bottom" AllowsTransparency="True" PopupAnimation="Fade">
                                    <Control Template="{StaticResource FormatInfoPopupContent}"/>
                                </Popup>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox x:Name="OptionsGroup" Header="{DynamicResource Options}" BorderBrush="{DynamicResource ThemeBorder}" Padding="10">
                        <StackPanel>
                            <CheckBox x:Name="ChkAutoSave" Content="{DynamicResource SettingsAutoSaveDesc}" Margin="0,5"/>
                            <CheckBox x:Name="ChkShowPreview" Content="{DynamicResource SettingsShowPreviewDesc}" Margin="0,5"/>
                            <CheckBox x:Name="ChkShowMagnifier" Content="{DynamicResource SettingsShowMagnifierDesc}" Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- íŒŒì¼ëª… ì„¤ì • -->
                    <GroupBox x:Name="FileNameSettingsGroup" Header="{DynamicResource FileNameSettings}" BorderBrush="{DynamicResource ThemeBorder}" Padding="10" Margin="0,10,0,0">
                        <StackPanel>
                            <!-- Label removed as requested -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtFileNameTemplate" Height="30" VerticalContentAlignment="Center" Padding="5,0" 
                                         Background="Transparent" Foreground="{DynamicResource ThemeForeground}" BorderBrush="{DynamicResource ThemeBorder}"
                                         TextChanged="TxtFileNameTemplate_TextChanged"/>
                                <ComboBox x:Name="CboFileNamePresets" Grid.Column="1" Width="140" Height="30" Margin="10,0,0,0" SelectionChanged="CboFileNamePresets_SelectionChanged" VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="{DynamicResource Default}" Tag="Default"/>
                                    <ComboBoxItem Content="Simple" Tag="Simple"/>
                                    <ComboBoxItem Content="Timestamp" Tag="Timestamp"/>
                                </ComboBox>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" Margin="2,0,0,0">
                                <TextBlock x:Name="PreviewLabel" Text="{DynamicResource FileNamePreview}" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                                <TextBlock Text=" : " Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" FontSize="11"/>
                                <TextBlock x:Name="TxtFileNamePreview" Text="Wait..." Foreground="{DynamicResource AccentColor}" FontSize="11" FontWeight="SemiBold" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
