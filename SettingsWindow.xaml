                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ThemeBorder}"/>
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Grid VerticalAlignment="Center" Width="18" Height="18">
                                <Border x:Name="checkBoxBorder" 
                                        Width="16" Height="16" 
                                        CornerRadius="4" 
                                        BorderThickness="1.2" 
                                        BorderBrush="{DynamicResource ThemeBorder}" 
                                        Background="White"
                                        SnapsToDevicePixels="True">
                                    <Grid>
                                        <!-- í•˜ì´ê·¸ë¡œì‹œ ê´‘íƒ ì˜¤ë²„ë ˆì´ (ë¶€ë“œëŸ½ê²Œ ì¡°ì •) -->
                                        <Border x:Name="glossyOverlay" CornerRadius="3" Opacity="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="0.4"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <!-- ì²´í¬ í‘œì‹œ (í¬ê¸° ì¶•ì†Œ ë° ì¤‘ì•™ ì •ë ¬ ìµœì í™”) -->
                                        <Path x:Name="checkMark" 
                                              Data="M 4.5,8.5 L 7.5,11.5 L 12.5,6.5" 
                                              Stroke="White" 
                                              StrokeThickness="1.8" 
                                              StrokeStartLineCap="Round" 
                                              StrokeEndLineCap="Round" 
                                              StrokeLineJoin="Round"
                                              Visibility="Collapsed" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="-0.5,0,0,0.5"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#70BFFF" Offset="0"/>
                                            <GradientStop Color="#4090FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#3080EF"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="glossyOverlay" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RadioButton Style -->
