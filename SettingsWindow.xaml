<Window x:Class="CatchCapture.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Height="600" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F7"
        FontFamily="Malgun Gothic, Segoe UI">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="SidebarBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="ContentBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/> <!-- Mac Blue -->
        <SolidColorBrush x:Key="TextPrimary" Color="#333333"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

        <!-- Styles -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MacButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MacButtonSecondary" TargetType="Button" BasedOn="{StaticResource MacButtonPrimary}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Grid VerticalAlignment="Center">
                                <Border x:Name="checkBoxBorder" Width="14" Height="14" CornerRadius="3" BorderThickness="1" BorderBrush="#C0C0C0" Background="White"/>
                                <Path x:Name="checkMark" Data="M 3,7 L 5,9 L 11,3" Stroke="White" StrokeThickness="1.5" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="checkBoxBorder" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="26"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,30,0,0">
                <!-- App Logo/Title -->
                <StackPanel Orientation="Horizontal" Margin="25,0,0,30">
                    <Image Source="/Icons/camera.png" Width="24" Height="24" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="CatchCapture" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Navigation -->
                <TextBlock x:Name="SidebarGeneralText" Text="" Visibility="Collapsed" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="25,0,0,5" FontWeight="SemiBold"/>
                <Button x:Name="NavCapture" Content="캡처 설정" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Capture"/>
                <Button x:Name="NavSystem" Content="시스템 설정" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="System"/>
                <Button x:Name="NavHotkey" Content="단축키 설정" Style="{StaticResource SidebarButton}" Click="Nav_Click" Tag="Hotkey"/>
                
                <!-- Bottom Info -->
                <StackPanel VerticalAlignment="Bottom" Margin="25,280,0,0">
                     <TextBlock Text="버전 1.0.0" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="기본설정 복원" FontSize="11" Foreground="{StaticResource TextSecondary}" Cursor="Hand" MouseLeftButtonUp="RestoreDefaults_Click"/>
                        <TextBlock Text="  |  " FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="문의하기" FontSize="11" Foreground="{StaticResource TextSecondary}" Cursor="Hand" MouseLeftButtonUp="Contact_Click"/>
                     </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Capture Page -->
            <Border x:Name="PageCapture" Grid.Row="0" Background="{StaticResource ContentBackground}" CornerRadius="8" Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock x:Name="CaptureSectionTitle" Text="캡처 설정" Style="{StaticResource SectionTitle}"/>
                    
                    <GroupBox x:Name="SaveSettingsGroup" Header="저장 설정" Margin="0,0,0,20" BorderBrush="{StaticResource BorderColor}" Padding="15">
                        <StackPanel>
                            <TextBlock x:Name="SavePathText" Text="저장 경로" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtFolder" Height="30" VerticalContentAlignment="Center" Padding="5,0" IsReadOnly="True" Background="#FAFAFA" BorderBrush="{StaticResource BorderColor}"/>
                                <Button x:Name="BtnBrowse" Grid.Column="1" Content="변경" Margin="10,0,0,0" Padding="10,0" Click="BtnBrowse_Click" Style="{StaticResource MacButtonSecondary}" Height="30"/>
                            </Grid>
                            
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock x:Name="FileFormatText" Grid.Column="0" Text="파일 포맷" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,10,0"/>
                                <ComboBox x:Name="CboFormat" Grid.Column="1" SelectionChanged="CboFormat_SelectionChanged">
                                    <ComboBoxItem Content="PNG"/>
                                    <ComboBoxItem Content="JPG"/>
                                    <ComboBoxItem Content="BMP"/>
                                    <ComboBoxItem Content="GIF"/>
                                </ComboBox>

                                <TextBlock x:Name="QualityText" Grid.Column="3" Text="품질" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,10,0"/>
                                <ComboBox x:Name="CboQuality" Grid.Column="4" Height="26">
                                    <ComboBoxItem Content="100%" Tag="100"/>
                                    <ComboBoxItem Content="90%" Tag="90"/>
                                    <ComboBoxItem Content="80%" Tag="80" IsSelected="True"/>
                                    <ComboBoxItem Content="70%" Tag="70"/>
                                    <ComboBoxItem Content="60%" Tag="60"/>
                                    <ComboBoxItem Content="50%" Tag="50"/>
                                    <ComboBoxItem Content="40%" Tag="40"/>
                                    <ComboBoxItem Content="30%" Tag="30"/>
                                    <ComboBoxItem Content="20%" Tag="20"/>
                                    <ComboBoxItem Content="10%" Tag="10"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox x:Name="OptionsGroup" Header="옵션" BorderBrush="{StaticResource BorderColor}" Padding="15">
                        <StackPanel>
                            <CheckBox x:Name="ChkAutoSave" Content="캡처 시 자동으로 파일 저장"/>
                            <CheckBox x:Name="ChkShowPreview" Content="캡처 후 미리보기/편집 창 표시"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>

            <!-- Hotkey Page -->
            <Border x:Name="PageHotkey" Grid.Row="0" Background="{StaticResource ContentBackground}" CornerRadius="8" Padding="20" Visibility="Collapsed">
                 <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock x:Name="HotkeySectionTitle" Text="단축키 설정" Style="{StaticResource SectionTitle}" Grid.Row="0"/>
                    
                    <!-- Print Screen 키 설정 -->
                    <StackPanel Grid.Row="0" Margin="0,40,0,20">
                        <GroupBox x:Name="PrintScreenGroup" Header="Print Screen 키 사용" BorderBrush="{StaticResource BorderColor}" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="ChkUsePrintScreen" Grid.Column="0" Content="Print Screen 키를 사용" VerticalAlignment="Center"/>
                                <ComboBox x:Name="CboPrintScreenAction" Grid.Column="4">
                                    <ComboBoxItem Content="영역 캡처"/>
                                    <ComboBoxItem Content="전체화면"/>
                                    <ComboBoxItem Content="지정 캡처"/>
                                    <ComboBoxItem Content="창 캡처"/>
                                    <ComboBoxItem Content="단위 캡처"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/> <!-- Label -->
                                <ColumnDefinition Width="60"/>  <!-- Ctrl -->
                                <ColumnDefinition Width="60"/>  <!-- Shift -->
                                <ColumnDefinition Width="60"/>  <!-- Alt -->
                                <ColumnDefinition Width="60"/>  <!-- Win -->
                                <ColumnDefinition Width="*"/>   <!-- Key -->
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/> <!-- Header -->
                                <RowDefinition Height="32"/> <!-- Region -->
                                <RowDefinition Height="32"/> <!-- Delay -->
                                <RowDefinition Height="32"/> <!-- RealTime 추가 -->
                                <RowDefinition Height="32"/> <!-- Multi 추가 -->
                                <RowDefinition Height="32"/> <!-- Full -->
                                <RowDefinition Height="32"/> <!-- Designated -->
                                <RowDefinition Height="32"/> <!-- Window -->
                                <RowDefinition Height="32"/> <!-- Element -->
                                <RowDefinition Height="32"/> <!-- Scroll -->
                                <RowDefinition Height="32"/> <!-- Save -->
                                <RowDefinition Height="32"/> <!-- Delete -->
                                <RowDefinition Height="32"/> <!-- Simple -->
                                <RowDefinition Height="32"/> <!-- Settings -->
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Shift" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Alt" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Win" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="Key" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource TextSecondary}"/>

                            <!-- Region Capture -->
                            <CheckBox x:Name="HkRegionEnabled" Grid.Row="1" Grid.Column="0" Content="영역 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkRegionCtrl" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkRegionShift" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkRegionAlt" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkRegionWin" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkRegionKey" Grid.Row="1" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Delay Capture -->
                            <CheckBox x:Name="HkDelayEnabled" Grid.Row="2" Grid.Column="0" Content="지연 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkDelayCtrl" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDelayShift" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDelayAlt" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDelayWin" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkDelayKey" Grid.Row="2" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- RealTime Capture -->
                            <CheckBox x:Name="HkRealTimeEnabled" Grid.Row="3" Grid.Column="0" Content="순간 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkRealTimeCtrl" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkRealTimeShift" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkRealTimeAlt" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkRealTimeWin" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkRealTimeKey" Grid.Row="3" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Multi Capture -->
                            <CheckBox x:Name="HkMultiEnabled" Grid.Row="4" Grid.Column="0" Content="멀티 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkMultiCtrl" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkMultiShift" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkMultiAlt" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkMultiWin" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkMultiKey" Grid.Row="4" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Full Screen -->
                            <CheckBox x:Name="HkFullEnabled" Grid.Row="5" Grid.Column="0" Content="전체 화면" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkFullCtrl" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkFullShift" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkFullAlt" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkFullWin" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkFullKey" Grid.Row="5" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Designated Window -->
                            <CheckBox x:Name="HkDesignatedEnabled" Grid.Row="6" Grid.Column="0" Content="지정 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkDesignatedCtrl" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDesignatedShift" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDesignatedAlt" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDesignatedWin" Grid.Row="6" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkDesignatedKey" Grid.Row="6" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                            
                            <!-- 창 캡처 -->
                            <CheckBox x:Name="HkWindowCaptureEnabled" Grid.Row="7" Grid.Column="0" Content="창 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkWindowCaptureCtrl" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkWindowCaptureShift" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkWindowCaptureAlt" Grid.Row="7" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkWindowCaptureWin" Grid.Row="7" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkWindowCaptureKey" Grid.Row="7" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- 단위 캡처 -->
                            <CheckBox x:Name="HkElementCaptureEnabled" Grid.Row="8" Grid.Column="0" Content="단위 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkElementCaptureCtrl" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkElementCaptureShift" Grid.Row="8" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkElementCaptureAlt" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkElementCaptureWin" Grid.Row="8" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkElementCaptureKey" Grid.Row="8" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- 스크롤 캡처 -->
                            <CheckBox x:Name="HkScrollCaptureEnabled" Grid.Row="9" Grid.Column="0" Content="스크롤 캡처" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkScrollCaptureCtrl" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkScrollCaptureShift" Grid.Row="9" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkScrollCaptureAlt" Grid.Row="9" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkScrollCaptureWin" Grid.Row="9" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkScrollCaptureKey" Grid.Row="9" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Save All -->
                            <CheckBox x:Name="HkSaveAllEnabled" Grid.Row="10" Grid.Column="0" Content="전체 저장" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkSaveAllCtrl" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkSaveAllShift" Grid.Row="10" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkSaveAllAlt" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkSaveAllWin" Grid.Row="10" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkSaveAllKey" Grid.Row="10" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Delete All -->
                            <CheckBox x:Name="HkDeleteAllEnabled" Grid.Row="11" Grid.Column="0" Content="전체 삭제" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkDeleteAllCtrl" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDeleteAllShift" Grid.Row="11" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDeleteAllAlt" Grid.Row="11" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkDeleteAllWin" Grid.Row="11" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkDeleteAllKey" Grid.Row="11" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Simple Mode -->
                            <CheckBox x:Name="HkSimpleModeEnabled" Grid.Row="12" Grid.Column="0" Content="간편 모드" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkSimpleModeCtrl" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkSimpleModeShift" Grid.Row="12" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkSimpleModeAlt" Grid.Row="12" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkSimpleModeWin" Grid.Row="12" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkSimpleModeKey" Grid.Row="12" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Open Settings -->
                            <CheckBox x:Name="HkOpenSettingsEnabled" Grid.Row="13" Grid.Column="0" Content="설정 열기" FontWeight="SemiBold"/>
                            <CheckBox x:Name="HkOpenSettingsCtrl" Grid.Row="13" Grid.Column="1" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkOpenSettingsShift" Grid.Row="13" Grid.Column="2" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkOpenSettingsAlt" Grid.Row="13" Grid.Column="3" HorizontalAlignment="Center"/>
                            <CheckBox x:Name="HkOpenSettingsWin" Grid.Row="13" Grid.Column="4" HorizontalAlignment="Center"/>
                            <ComboBox x:Name="HkOpenSettingsKey" Grid.Row="13" Grid.Column="5" Width="80" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- System Page -->
            <Border x:Name="PageSystem" Grid.Row="0" Background="{StaticResource ContentBackground}" CornerRadius="8" Padding="30" Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock x:Name="SystemSectionTitle" Text="시스템 설정" Style="{StaticResource SectionTitle}"/>
                    
                    <GroupBox x:Name="StartupGroup" Header="시작 설정" Margin="0,0,0,20" BorderBrush="{StaticResource BorderColor}" Padding="15">
                        <StackPanel>
                            <!-- 윈도우 시작 시 자동 실행 -->
                            <CheckBox x:Name="StartWithWindowsCheckBox" 
                                      Content="윈도우 시작 시 자동 실행" 
                                      Margin="0,5"/>
                            
                            <!-- 시작 모드 선택 -->
                            <TextBlock x:Name="StartupModeText" Text="시작 모드" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="{StaticResource TextSecondary}"/>
                            <RadioButton x:Name="StartupModeTrayRadio" 
                                         Content="트레이 모드로 시작" 
                                         GroupName="StartupMode" 
                                         IsChecked="True" 
                                         Margin="0,5"/>
                            <RadioButton x:Name="StartupModeNormalRadio" 
                                         Content="일반 모드로 시작" 
                                         GroupName="StartupMode" 
                                         Margin="0,5"/>
                            <RadioButton x:Name="StartupModeSimpleRadio" 
                                         Content="간편 모드로 시작" 
                                         GroupName="StartupMode" 
                                         Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Language Settings -->
                    <GroupBox x:Name="LanguageGroup" Header="언어 설정" Margin="0,0,0,20" BorderBrush="{StaticResource BorderColor}" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="LanguageLabelText" Grid.Column="0" Text="언어" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,10,0"/>
                            <ComboBox x:Name="LanguageComboBox" Grid.Column="1" />
                            <TextBlock x:Name="LanguageRestartNotice" Grid.Column="2" Text="언어 변경 후 프로그램을 다시 시작해야 합니다." Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </GroupBox>
                    
                    <TextBlock Text="※ 시작 모드는 프로그램이 실행될 때 처음 표시되는 화면을 설정합니다." 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="5,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" Content="취소" Style="{StaticResource MacButtonSecondary}" Click="Cancel_Click" Width="80" Margin="0,0,10,0"/>
                <Button x:Name="SaveButton" Content="저장" Style="{StaticResource MacButtonPrimary}" Click="Save_Click" Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
