<Window x:Class="CatchCapture.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="인쇄 미리보기" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 상단 툴바 (모든 컨트롤 한 줄) -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E6F0" BorderThickness="0,0,0,1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 왼쪽: 옵션들 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- 방향 -->
                    <TextBlock Text="방향:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                    <ComboBox x:Name="OrientationComboBox" Width="70" Height="26" Margin="0,0,15,0" FontSize="11"
                              SelectionChanged="OrientationComboBox_SelectionChanged">
                        <ComboBoxItem Content="세로" IsSelected="True"/>
                        <ComboBoxItem Content="가로"/>
                    </ComboBox>
                    
                    <!-- 인쇄 옵션 -->
                    <TextBlock Text="인쇄 옵션:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                    <ComboBox x:Name="PrintOptionsComboBox" Width="120" Height="26" Margin="0,0,0,0" FontSize="11"
                              SelectionChanged="PrintOptionsComboBox_SelectionChanged">
                        <ComboBoxItem Content="페이지에 맞춤" IsSelected="True"/>
                        <ComboBoxItem Content="실제 크기"/>
                        <ComboBoxItem Content="페이지 채우기"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- 우측: 버튼들 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="PrintButton" Content="인쇄" Width="70" Height="26" Margin="0,0,5,0" Click="PrintButton_Click"
                            Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand" FontSize="11">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="3" Padding="8,4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#005A9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="CloseButton" Content="닫기" Width="70" Height="26" Margin="0" Click="CloseButton_Click"
                            Background="#F0F0F0" Foreground="#333" BorderThickness="0" Cursor="Hand" FontSize="11">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="3" Padding="8,4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 문서 뷰어 -->
        <DocumentViewer x:Name="DocumentViewer" Grid.Row="1"/>
    </Grid>
</Window>
