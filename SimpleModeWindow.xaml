<Window x:Class="CatchCapture.SimpleModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchCapture"
        mc:Ignorable="d"
        Title="캐치캡처-간단모드" Height="85" Width="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave"
        KeyDown="SimpleModeWindow_KeyDown">
    
    <Window.Resources>
        <!-- 공통 버튼 스타일 -->
        <Style x:Key="SimpleModeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 아이콘 버튼 스타일 -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- 작은 제어 버튼 스타일 -->
        <Style x:Key="ControlButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- + 버튼 스타일 -->
        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
        </Style>

        <!-- 작은 공통 버튼 스타일 -->
        <Style x:Key="TinyButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
        </Style>

        <!-- Light ContextMenu style (reuse key for Simple Mode) -->
        <Style x:Key="DarkContextMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="ItemContainerStyle" Value="{DynamicResource DarkMenuItem}"/>
        </Style>

        <!-- Light menu Separator -->
        <Style x:Key="LightSeparator" TargetType="Separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="{TemplateBinding Background}" Height="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Light MenuItem style (aligned icon/text) -->
        <Style x:Key="DarkMenuItem" TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
            <Setter Property="Padding" Value="6,4,10,4"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Icon" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0" SnapsToDevicePixels="True">
                            <Grid SnapsToDevicePixels="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- 아이콘 컨테이너: 이름 부여하여 접기 가능 -->
                                <Border x:Name="IconHost" Grid.Column="0" Width="20" Height="16" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentPresenter ContentSource="Icon" HorizontalAlignment="Center" VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                                </Border>
                                <!-- 아이콘-텍스트 간격 -->
                                <Border x:Name="Gap" Grid.Column="1" Width="6" Background="Transparent"/>
                                <!-- 텍스트 -->
                                <ContentPresenter Grid.Column="2" ContentSource="Header" VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#3F3F46"/>
                                <Setter Property="Opacity" Value="1.0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="Icon" Value="{x:Null}">
                                <Setter TargetName="IconHost" Property="Width" Value="0"/>
                                <Setter TargetName="Gap" Property="Width" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 스위치 토글 버튼 스타일 -->
        <Style x:Key="SwitchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Width="30" Height="14">
                            <Border x:Name="SwitchBorder" 
                                    CornerRadius="7" 
                                    Background="{DynamicResource ThemeBorder}"/>
                            <Ellipse x:Name="SwitchThumb" 
                                     Width="10" Height="10" 
                                     Fill="White" 
                                     HorizontalAlignment="Left" 
                                     Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 가로 모드 레이아웃 -->
        <Border x:Name="HorizontalRoot" CornerRadius="8" Background="{DynamicResource ThemeBackground}" BorderBrush="{DynamicResource ThemeWindowBorder}" BorderThickness="1" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 타이틀바 -->
                <Border Grid.Row="0" Background="{DynamicResource ThemeSimpleTitleBackground}" CornerRadius="8,8,0,0" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Image Source="/icons/simple_title.png" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <!-- 즉시편집 스위치 (왼쪽) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                            <TextBlock x:Name="InstantEditLabelH" Text="" 
                                       FontSize="8" 
                                       FontFamily="Segoe UI, Malgun Gothic" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,3,0" 
                                       Foreground="{DynamicResource ThemeSimpleTitleForeground}"/>
                            <ToggleButton x:Name="InstantEditToggleH" 
                                          Width="30" Height="14" 
                                          Style="{StaticResource SwitchToggleButtonStyle}"
                                          Checked="InstantEditToggle_Changed"
                                          Unchecked="InstantEditToggle_Changed"/>
                            <!-- A+ size toggle button -->
                            <Button x:Name="APlusButtonH" Width="20" Height="18" Margin="4,0,0,0" Background="Transparent" BorderThickness="0">
                                <Button.Content>
                                    <TextBlock Text="A+" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource ThemeSimpleTitleForeground}"/>
                                </Button.Content>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
                                        <EventSetter Event="Click" Handler="APlusButton_Click"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">   
                            <Button x:Name="ExitSimpleModeBtn" Style="{StaticResource ControlButtonStyle}" Click="ExitSimpleModeButton_Click">
                                <Image Source="/icons/normal_mode.png" Width="12" Height="12"/>
                            </Button>
                            <Button x:Name="MinimizeToTrayBtn" Style="{StaticResource ControlButtonStyle}" Click="MinimizeToTrayButton_Click">
                                <Image Source="/icons/tray_mode.png" Width="12" Height="12"/>
                            </Button>
                            <Button x:Name="CloseBtnH" Style="{StaticResource ControlButtonStyle}" Click="CloseButton_Click">
                                <TextBlock Text="✕" FontSize="9" Foreground="{DynamicResource ThemeSimpleTitleForeground}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 버튼 영역 (동적 생성) -->
                <StackPanel x:Name="ButtonsPanelH" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 세로 모드 레이아웃 -->
        <Border x:Name="VerticalRoot" CornerRadius="8" Background="{DynamicResource ThemeBackground}" BorderBrush="{DynamicResource ThemeWindowBorder}" BorderThickness="1" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 드래그 핸들 -->
                <Border Grid.Row="0" Background="{DynamicResource ThemeSimpleTitleBackground}" CornerRadius="8,8,0,0" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1">
                    <Image Source="/icons/simple_title.png" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <!-- 캡처 버튼들 (동적 생성) -->
                <StackPanel x:Name="ButtonsPanelV" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,3,2,4"/>

                <!-- 하단 제어 버튼들 -->
                <Border Grid.Row="2" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,1,0,0" Padding="0,5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0">
                        <!-- 즉시편집 스위치 -->
                        <ToggleButton x:Name="InstantEditToggleV" 
                                      Width="30" Height="14" 
                                      Margin="0,0,0,3"
                                      Style="{StaticResource SwitchToggleButtonStyle}"
                                      Checked="InstantEditToggle_Changed"
                                      Unchecked="InstantEditToggle_Changed"/>
                        <!-- A+ size toggle button (vertical) -->
                        <Button x:Name="APlusButtonV" Style="{StaticResource ControlButtonStyle}" Click="APlusButton_Click">
                            <TextBlock Text="A+" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource ThemeForeground}"/>
                        </Button>
                        
                        <Button x:Name="CloseBtnV" Style="{StaticResource ControlButtonStyle}" Click="CloseButton_Click">
                            <TextBlock Text="✕" FontSize="9" Foreground="{DynamicResource ThemeForeground}"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>