<Window x:Class="CatchCapture.SimpleModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchCapture"
        mc:Ignorable="d"
        Title="간편 모드" Height="85" Width="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave"
        KeyDown="SimpleModeWindow_KeyDown">
    
    <Window.Resources>
        <!-- 공통 버튼 스타일 -->
        <Style x:Key="SimpleModeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEF2FF" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 아이콘 버튼 스타일 -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- 작은 제어 버튼 스타일 -->
        <Style x:Key="ControlButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- + 버튼 스타일 -->
        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource SimpleModeButtonStyle}">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Opacity" Value="0.3"/>
        </Style>

        <!-- 스위치 토글 버튼 스타일 -->
        <Style x:Key="SwitchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Width="30" Height="14">
                            <Border x:Name="SwitchBorder" 
                                    CornerRadius="7" 
                                    Background="#CCCCCC"/>
                            <Ellipse x:Name="SwitchThumb" 
                                     Width="10" Height="10" 
                                     Fill="White" 
                                     HorizontalAlignment="Left" 
                                     Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 가로 모드 레이아웃 -->
        <Border x:Name="HorizontalRoot" CornerRadius="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 타이틀바 -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Grid>
                        <Image Source="/icons/simple_title.png" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <!-- 즉시편집 스위치 (왼쪽) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                            <TextBlock Text="즉시편집" 
                                       FontSize="8" 
                                       FontFamily="Segoe UI, Malgun Gothic" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,3,0" 
                                       Foreground="#555"/>
                            <ToggleButton x:Name="InstantEditToggleH" 
                                          Width="30" Height="14" 
                                          Style="{StaticResource SwitchToggleButtonStyle}"
                                          Checked="InstantEditToggle_Changed"
                                          Unchecked="InstantEditToggle_Changed"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">                      
                            <Button Style="{StaticResource ControlButtonStyle}" Click="MinimizeToTrayButton_Click" ToolTip="트레이 모드">
                                <Image Source="/icons/tray_mode.png" Width="12" Height="12"/>
                            </Button>
                            <Button Style="{StaticResource ControlButtonStyle}" Click="ExitSimpleModeButton_Click" ToolTip="일반 모드">
                                <Image Source="/icons/window_cap.png" Width="12" Height="12"/>
                            </Button>
                            <Button Style="{StaticResource ControlButtonStyle}" Click="CloseButton_Click" ToolTip="닫기">
                                <TextBlock Text="✕" FontSize="9" Foreground="#666"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 버튼 영역 (동적 생성) -->
                <StackPanel x:Name="ButtonsPanelH" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 세로 모드 레이아웃 -->
        <Border x:Name="VerticalRoot" CornerRadius="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 드래그 핸들 -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Image Source="/icons/simple_title.png" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <!-- 캡처 버튼들 (동적 생성) -->
                <StackPanel x:Name="ButtonsPanelV" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,5,4,5"/>

                <!-- 하단 제어 버튼들 -->
                <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- 즉시편집 스위치 -->
                        <ToggleButton x:Name="InstantEditToggleV" 
                                      Width="16" Height="16" 
                                      Margin="0,0,0,3"
                                      Style="{StaticResource SwitchToggleButtonStyle}"
                                      ToolTip="즉시편집"
                                      Checked="InstantEditToggle_Changed"
                                      Unchecked="InstantEditToggle_Changed"/>
                        
                        <Button Style="{StaticResource ControlButtonStyle}" Click="CloseButton_Click" ToolTip="닫기">
                            <TextBlock Text="✕" FontSize="9" Foreground="#666"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>