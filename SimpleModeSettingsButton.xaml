<Window x:Class="CatchCapture.SimpleModeSettingsButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Width="96" Height="42"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False"
        Topmost="True" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="8" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1">
        <Button x:Name="BtnSettings" Margin="6" Padding="6,4" Click="BtnSettings_Click" Cursor="Hand">
            <StackPanel Orientation="Horizontal">
                <Image Source="/icons/clock.png" Width="14" Height="14" Margin="0,0,4,0"/>
                <TextBlock Text="설정" FontSize="12"/>
            </StackPanel>
        </Button>
    </Border>
</Window>
