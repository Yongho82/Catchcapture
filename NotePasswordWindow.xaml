<Window x:Class="CatchCapture.NotePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="노트 비밀번호 설정" Height="Auto" Width="380"
        SizeToContent="Height"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border x:Name="border" Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="5">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                    <Setter TargetName="border" Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="40" CenterY="15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12" Margin="10" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Direction="315" Color="#40000000" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock x:Name="TxtHeaderTitle" Text="노트 비밀번호 설정" VerticalAlignment="Center" Margin="20,0" 
                           FontWeight="Bold" FontSize="15" Foreground="{DynamicResource ThemeForeground}"/>
                <Button x:Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        Width="30" Height="30" Margin="10,0" Background="Transparent" BorderThickness="0"
                        Click="Cancel_Click" Cursor="Hand">
                    <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="#999" StrokeThickness="1.5" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Separator VerticalAlignment="Bottom" Background="#F0F0F0" Margin="0"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="25,20,25,20">
                <TextBlock x:Name="TxtNewPassLabel" Text="새 비밀번호" Foreground="#555" Margin="0,0,0,8" FontSize="13"/>
                <PasswordBox x:Name="PbNewPassword" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"
                             Padding="10,0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1"/>
                
                <TextBlock x:Name="TxtConfirmPassLabel" Text="비밀번호 확인" Foreground="#555" Margin="0,0,0,8" FontSize="13"/>
                <PasswordBox x:Name="PbConfirmPassword" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"
                             Padding="10,0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1"/>
                
                <TextBlock x:Name="TxtHintLabel" Text="비밀번호 힌트 (필수)" Foreground="#555" Margin="0,0,0,8" FontSize="13"/>
                <TextBox x:Name="TxtHint" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"
                         Padding="10,0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1"/>
                
                <Border Background="#FFF1F0" CornerRadius="6" Padding="12,10">
                    <TextBlock x:Name="TxtWarning" Text="※ 비밀번호 분실 시 로컬 저장 특성상 데이터 복구가 불가능하오니 주의하십시오." 
                               FontSize="11" Foreground="#FF4D4F" TextWrapping="Wrap" LineHeight="16"/>
                </Border>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,25,10">
                <Button x:Name="BtnCancel" Content="취소" Width="90" Height="34" Margin="0,0,10,0"
                        Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                        Foreground="#666" FontWeight="SemiBold" FontSize="13"
                        Template="{StaticResource RoundedButtonTemplate}"
                        Click="Cancel_Click" Cursor="Hand"/>

                <Button x:Name="BtnSave" Content="저장" Width="90" Height="34"
                        Background="#007AFF" BorderThickness="0"
                        Foreground="White" FontWeight="Bold" FontSize="13"
                        Template="{StaticResource RoundedButtonTemplate}"
                        Click="Save_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
