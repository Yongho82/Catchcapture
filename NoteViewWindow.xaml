<Window x:Class="CatchCapture.NoteViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="노트 보기" Height="800" Width="900"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="12" BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.15" ShadowDepth="5" Direction="270"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="30,25,30,10">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                             <Ellipse x:Name="CategoryCircle" Width="10" Height="10" Fill="#8E2DE2" Margin="0,0,8,0"/>
                             <TextBlock x:Name="TxtCategory" Text="카테고리" Foreground="#555555" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                        <Button x:Name="BtnClose" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                Click="BtnClose_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="닫기">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="#95A5A6" Stretch="Uniform" Width="14" Height="14"/>
                        </Button>
                    </Grid>

                    <TextBlock x:Name="TxtTitle" Text="노트 제목" FontSize="26" FontWeight="Bold" Foreground="#222222" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                         <TextBlock x:Name="TxtDate" Text="2024-12-26 12:00" Foreground="#999999" FontSize="13" Margin="0,0,15,0"/>
                         <TextBlock Text="|" Foreground="#E0E0E0" Margin="0,0,15,0"/>
                         <TextBlock x:Name="TxtSource" Text="Source App" Foreground="#888888" FontSize="13"/>
                    </StackPanel>
                    
                    <Separator Background="#F0F0F0" Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" Margin="20,0,20,15" VerticalScrollBarVisibility="Auto">
                 <StackPanel>
                     <!-- Rich Content Viewer -->
                     <!-- IsReadOnly=True to act as viewer -->
                     <RichTextBox x:Name="ContentViewer" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                                  Padding="0" Margin="0" IsDocumentEnabled="True">
                         <RichTextBox.Resources>
                             <Style TargetType="{x:Type Paragraph}">
                                 <Setter Property="Margin" Value="0,0,0,5"/>
                             </Style>
                         </RichTextBox.Resources>
                     </RichTextBox>
                     
                     <!-- Tags -->
                     <ItemsControl x:Name="ItemsTags" Margin="0,15,0,0">
                         <ItemsControl.ItemTemplate>
                             <DataTemplate>
                                 <Border Background="#F1F3F4" CornerRadius="12" Padding="12,6" Margin="0,0,8,8">
                                     <StackPanel Orientation="Horizontal">
                                         <TextBlock Text="#" Foreground="#9AA0A6" Margin="0,0,4,0"/>
                                         <TextBlock Text="{Binding}" Foreground="#5F6368" FontSize="13"/>
                                     </StackPanel>
                                 </Border>
                             </DataTemplate>
                         </ItemsControl.ItemTemplate>
                         <ItemsControl.ItemsPanel>
                             <ItemsPanelTemplate>
                                 <WrapPanel/>
                             </ItemsPanelTemplate>
                         </ItemsControl.ItemsPanel>
                     </ItemsControl>
                 </StackPanel>
            </ScrollViewer>

            <!-- Footer Action -->
            <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#F0F0F0" Background="#FAFAFA" CornerRadius="0,0,12,12" Padding="20">
                <Button x:Name="BtnEdit" Content="수정하기" Click="BtnEdit_Click" Cursor="Hand" HorizontalAlignment="Right"
                        Width="120" Height="40" FontSize="14" FontWeight="Bold" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="#333333">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                             <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
