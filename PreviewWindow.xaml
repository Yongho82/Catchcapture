<Window x:Class="CatchCapture.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchCapture"
        mc:Ignorable="d"
        Title="이미지 편집" Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FC">
    
    <Window.Resources>
        <!-- 툴바 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- 옅은 하늘색 호버 색상 -->
                                <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <!-- 호버보다 약간 진한 하늘색 -->
                                <Setter Property="Background" Value="#CCE4FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 구분선 스타일 -->
        <Style x:Key="ToolbarSeparatorStyle" TargetType="Separator">
            <Setter Property="Margin" Value="5,8"/>
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#E0E6F0"/>
        </Style>
        
        <!-- 그림자 효과 -->
        <DropShadowEffect x:Key="MaterialShadow" ShadowDepth="1" BlurRadius="5" Opacity="0.2" Direction="270"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 도구 모음 -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E6F0" BorderThickness="0,0,0,1" Effect="{StaticResource MaterialShadow}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Margin="10,4">
                    <Button x:Name="CopyButton" Style="{StaticResource ToolbarButtonStyle}" Click="CopyButton_Click" ToolTip="클립보드에 복사">
                        <StackPanel>
                            <Image Source="icons/copy_selected.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="복사" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="SaveButton" Style="{StaticResource ToolbarButtonStyle}" Click="SaveButton_Click" ToolTip="저장">
                        <StackPanel>
                            <Image Source="icons/save_selected.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="저장" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="UndoButton" Style="{StaticResource ToolbarButtonStyle}" Click="UndoButton_Click" ToolTip="실행 취소" IsEnabled="False">
                        <StackPanel>
                            <Image Source="icons/undo.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="실행취소" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RedoButton" Style="{StaticResource ToolbarButtonStyle}" Click="RedoButton_Click" ToolTip="다시 실행" IsEnabled="False">
                        <StackPanel>
                            <Image Source="icons/redo.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="다시실행" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ResetButton" Style="{StaticResource ToolbarButtonStyle}" Click="ResetButton_Click" ToolTip="원본으로 되돌리기">
                        <StackPanel>
                            <Image Source="icons/reset.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="초기화" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="CropButton" Style="{StaticResource ToolbarButtonStyle}" Click="CropButton_Click" ToolTip="자르기">
                        <StackPanel>
                            <Image Source="icons/crop.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="자르기" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RotateButton" Style="{StaticResource ToolbarButtonStyle}" Click="RotateButton_Click" ToolTip="회전">
                        <StackPanel>
                            <Image Source="icons/rotate.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="회전" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="FlipHorizontalButton" Style="{StaticResource ToolbarButtonStyle}" Click="FlipHorizontalButton_Click" ToolTip="좌우 반전">
                        <StackPanel>
                            <Image Source="icons/flip_horizontal.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="좌우반전" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="FlipVerticalButton" Style="{StaticResource ToolbarButtonStyle}" Click="FlipVerticalButton_Click" ToolTip="상하 반전">
                        <StackPanel>
                            <Image Source="icons/flip_vertical.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="상하반전" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ShapeButton" Style="{StaticResource ToolbarButtonStyle}" Click="ShapeButton_Click" ToolTip="도형 그리기">
                        <StackPanel>
                            <Image Source="icons/shape.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="도형" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <!-- 펜 버튼 (형광펜 앞에 배치) -->
                    <Button x:Name="PenButton" Style="{StaticResource ToolbarButtonStyle}" Click="PenButton_Click" ToolTip="펜">
                        <StackPanel>
                            <!-- 아이콘 파일이 없으므로 임시 벡터 아이콘 사용 -->
                            <Canvas Width="17" Height="17" Margin="0,2,0,2">
                                <Path Stroke="#333" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M2,14 L15,3"/>
                                <Ellipse Stroke="#333" StrokeThickness="2" Width="3" Height="3" Canvas.Left="13" Canvas.Top="1"/>
                            </Canvas>
                            <TextBlock Text="펜" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="HighlightButton" Style="{StaticResource ToolbarButtonStyle}" Click="HighlightButton_Click" ToolTip="형광펜">
                        <StackPanel>
                            <Image Source="icons/highlight.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="형광펜" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="TextButton" Style="{StaticResource ToolbarButtonStyle}" Click="TextButton_Click" ToolTip="텍스트 추가">
                        <StackPanel>
                            <Image Source="icons/text.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="텍스트" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="MosaicButton" Style="{StaticResource ToolbarButtonStyle}" Click="MosaicButton_Click" ToolTip="모자이크">
                        <StackPanel>
                            <Image Source="icons/mosaic.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="모자이크" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="EraserButton" Style="{StaticResource ToolbarButtonStyle}" Click="EraserButton_Click" ToolTip="지우개">
                        <StackPanel>
                            <Image Source="icons/eraser.png" Width="17" Height="17" Margin="0,2,0,2"/>
                            <TextBlock Text="지우개" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 아이콘 하단에 표시되는 도구 옵션 팝업 -->
        <Popup x:Name="ToolOptionsPopup" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#D0D7E5" BorderThickness="1" CornerRadius="6" Padding="10" Effect="{StaticResource MaterialShadow}">
                <StackPanel x:Name="ToolOptionsPopupContent" Orientation="Horizontal" />
            </Border>
        </Popup>

        <!-- 이미지 표시 영역 -->
        <Border Grid.Row="1" Background="#ECEDF2" BorderThickness="0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="ImageCanvas" Background="#ECEDF2">
                    <Image x:Name="PreviewImage" Stretch="None" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Canvas>
            </ScrollViewer>
        </Border>

        <!-- 하단 옵션 패널 (편집 도구 옵션) - 컴팩트하게 변경 -->
        <Border x:Name="EditToolPanel" Grid.Row="2" Background="White" BorderBrush="#D0D7E5" 
                BorderThickness="0,1,0,0" Visibility="Collapsed" Effect="{StaticResource MaterialShadow}">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="10,8,10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 패널 제목 -->
                    <TextBlock x:Name="ToolTitleText" Text="도구 옵션" FontWeight="SemiBold" FontSize="12"
                               Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <!-- 옵션 컨텐츠 - 가로 배열로 변경 -->
                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                MaxHeight="60" Margin="0,0,10,0">
                        <StackPanel x:Name="EditToolContent" Orientation="Horizontal"/>
                    </ScrollViewer>
                    
                    <!-- 닫기 버튼 -->
                    <Button x:Name="CloseOptionsButton" Grid.Column="2" Content="✕" 
                            Width="22" Height="22"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#F0F0F0" BorderThickness="0" FontSize="10" FontWeight="Bold" 
                            Cursor="Hand" Click="CloseOptionsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="11"
                                        Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE0E0" TargetName="border"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FFCCCC" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>