<Window x:Class="CatchCapture.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchCapture"
        mc:Ignorable="d"
        Title="이미지 편집" Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FC">
    
    <Window.Resources>
        <!-- 툴바 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- 옅은 하늘색 호버 색상 -->
                                <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <!-- 호버보다 약간 진한 하늘색 -->
                                <Setter Property="Background" Value="#CCE4FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 구분선 스타일 -->
        <Style x:Key="ToolbarSeparatorStyle" TargetType="Separator">
            <Setter Property="Margin" Value="5,8"/>
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#E0E6F0"/>
        </Style>
        
        <!-- 그림자 효과 -->
        <DropShadowEffect x:Key="MaterialShadow" ShadowDepth="1" BlurRadius="5" Opacity="0.2" Direction="270"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="RightPanelColumn" Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 도구 모음 -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="White" BorderBrush="#E0E6F0" BorderThickness="0,0,0,1" Effect="{StaticResource MaterialShadow}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Margin="10,8">
                    <Button x:Name="CopyButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="CopyButton_Click" ToolTip="클립보드에 복사">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/copy_selected.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="복사" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="SaveButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="SaveButton_Click" ToolTip="저장">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/save_selected.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="저장" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="UndoButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="UndoButton_Click" ToolTip="실행 취소" IsEnabled="False">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/undo.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="실행취소" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RedoButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="RedoButton_Click" ToolTip="다시 실행" IsEnabled="False">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/redo.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="다시실행" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ResetButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="ResetButton_Click" ToolTip="원본으로 되돌리기">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/reset.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="초기화" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="CropButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="CropButton_Click" ToolTip="자르기">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/crop.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="자르기" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RotateButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="RotateButton_Click" ToolTip="회전">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/rotate.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="회전" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="FlipHorizontalButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="FlipHorizontalButton_Click" ToolTip="좌우 반전">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/flip_horizontal.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="좌우반전" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="FlipVerticalButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="FlipVerticalButton_Click" ToolTip="상하 반전">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/flip_vertical.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="상하반전" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- 도형 버튼 그룹 (메인 버튼 + 드롭다운) -->
                    <Grid Width="65" Height="65" Margin="2,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="42"/>
                            <RowDefinition Height="23"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 메인 도형 버튼 (기존 사이즈 유지) -->
                        <Button x:Name="ShapeButton" Grid.Row="0" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Click="ShapeButton_Click" ToolTip="도형 그리기 (기본: 사각형)">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6,6,0,0"
                                            Padding="2">
                                        <StackPanel>
                                            <Image Source="icons/shape.png" Width="20" Height="20" Margin="0,2,0,2"/>
                                            <TextBlock Text="도형" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#CCE4FF" TargetName="border"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- 드롭다운 버튼 (더 잘 보이게) -->
                        <Button x:Name="ShapeOptionsButton" Grid.Row="1" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Click="ShapeOptionsButton_Click" ToolTip="도형 옵션">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="#E0E6F0" 
                                            BorderThickness="0,1,0,0"
                                            CornerRadius="0,0,6,6"
                                            Height="13">
                                        <TextBlock Text="▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#888"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E8F3FF" TargetName="border"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#CCE4FF" TargetName="border"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <!-- 펜 버튼 (형광펜 앞에 배치) -->
                    <Button x:Name="PenButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="PenButton_Click" ToolTip="펜">
                        <StackPanel VerticalAlignment="Top">
                            <!-- 아이콘 파일이 없으므로 임시 벡터 아이콘 사용 -->
                            <Canvas Width="20" Height="20" Margin="0,2,0,2">
                                <Canvas.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </Canvas.LayoutTransform>
                                <Path Stroke="#333" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M2,14 L15,3"/>
                                <Ellipse Stroke="#333" StrokeThickness="2" Width="3" Height="3" Canvas.Left="13" Canvas.Top="1"/>
                            </Canvas>
                            <TextBlock Text="펜" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="HighlightButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="HighlightButton_Click" ToolTip="형광펜">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/highlight.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="형광펜" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="TextButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="TextButton_Click" ToolTip="텍스트 추가">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/text.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="텍스트" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="MosaicButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="MosaicButton_Click" ToolTip="모자이크">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/mosaic.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="모자이크" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="EraserButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="EraserButton_Click" ToolTip="지우개">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/eraser.png" Width="20" Height="20" Margin="0,2,0,2"/>
                            <TextBlock Text="지우개" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 아이콘 하단에 표시되는 도구 옵션 팝업 -->
        <Popup x:Name="ToolOptionsPopup" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
            <Border Background="White" BorderBrush="#D0D7E5" BorderThickness="1" CornerRadius="6" Padding="10" Effect="{StaticResource MaterialShadow}">
                <StackPanel x:Name="ToolOptionsPopupContent" Orientation="Horizontal" />
            </Border>
        </Popup>

        <!-- 이미지 표시 영역 -->
        <Border Grid.Row="1" Grid.Column="0" Background="#ECEDF2" BorderThickness="0">
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="ImageCanvas" Background="#ECEDF2">
                        <Image x:Name="PreviewImage" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Canvas>
                </ScrollViewer>
                
                <!-- 토글 버튼 (오른쪽 끝에 고정) -->
                <Button x:Name="ToggleButton" 
                        Width="12" 
                        Height="60"
                        Background="#F5F5F5" 
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Click="ToggleButton_Click"
                        Panel.ZIndex="1000">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3" Direction="0"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4,0,0,4">
                                <Path x:Name="Arrow" 
                                      Data="M 4,0 L 8,5 L 4,10 Z" 
                                      Fill="#888888" 
                                      Stretch="Uniform"
                                      Width="6"
                                      Height="12"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Arrow" Property="Fill" Value="#555555"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 하단 중앙 이미지 정보 바 -->
                <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                        Background="#E6000000" CornerRadius="4" Padding="12,6" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="ImageInfoText" Text="이미지 사이즈 : 808 x 428" 
                                   Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Text="—" Foreground="#999" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock x:Name="ZoomLevelText" Text="100 %" 
                                   Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <Button x:Name="ZoomOutButton" Content="−" 
                                Background="Transparent" Foreground="White" BorderThickness="0" 
                                Padding="8,4" FontSize="16" Cursor="Hand" Click="ZoomOutButton_Click"
                                Margin="0,0,5,0" ToolTip="축소"/>
                        <Button x:Name="ZoomInButton" Content="+" 
                                Background="Transparent" Foreground="White" BorderThickness="0" 
                                Padding="8,4" FontSize="16" Cursor="Hand" Click="ZoomInButton_Click"
                                Margin="0,0,5,0" ToolTip="확대"/>
                        <Button x:Name="ZoomResetButton" Content="원본" 
                                Background="Transparent" Foreground="White" BorderThickness="0" 
                                Padding="8,2" FontSize="11" Cursor="Hand" Click="ZoomResetButton_Click"
                                ToolTip="100%"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 하단 옵션 패널 (편집 도구 옵션) - 컴팩트하게 변경 -->
        <Border x:Name="EditToolPanel" Grid.Row="2" Grid.ColumnSpan="2" Background="White" BorderBrush="#D0D7E5" 
                BorderThickness="0,1,0,0" Visibility="Collapsed" Effect="{StaticResource MaterialShadow}">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="10,8,10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 패널 제목 -->
                    <TextBlock x:Name="ToolTitleText" Text="도구 옵션" FontWeight="SemiBold" FontSize="12"
                               Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <!-- 옵션 컨텐츠 - 가로 배열로 변경 -->
                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                MaxHeight="60" Margin="0,0,10,0">
                        <StackPanel x:Name="EditToolContent" Orientation="Horizontal"/>
                    </ScrollViewer>
                    
                    <!-- 닫기 버튼 -->
                    <Button x:Name="CloseOptionsButton" Grid.Column="2" Content="✕" 
                            Width="22" Height="22"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#F0F0F0" BorderThickness="0" FontSize="10" FontWeight="Bold" 
                            Cursor="Hand" Click="CloseOptionsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="11"
                                        Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE0E0" TargetName="border"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FFCCCC" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
        
        <!-- 우측 캡처 리스트 패널 -->
        <Border x:Name="CaptureListBorder" 
                Grid.Row="1" Grid.Column="1"
                Background="#FFFFFF" 
                BorderBrush="#E0E6F0" 
                BorderThickness="1,0,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.15" Direction="180"/>
            </Border.Effect>
            <Border.RenderTransform>
                <TranslateTransform x:Name="PanelTransform" X="0"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                                
                <!-- 헤더 영역 -->
                <Border Grid.Row="0" Background="#F8F9FC" BorderThickness="0,0,0,1" BorderBrush="#E0E6F0" Padding="12,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 제목과 캡처 개수 -->
                        <Grid Grid.Row="0">
                            <TextBlock Text="최근 캡처 목록" FontWeight="SemiBold" FontSize="13" Foreground="#333" VerticalAlignment="Center"/>
                            <TextBlock x:Name="CaptureCountText" Text="(0)" FontSize="12" Foreground="#888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- 썸네일 크기 조절 슬라이더 -->
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="크기" FontSize="10" Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Slider x:Name="ThumbnailSizeSlider" Grid.Column="1" 
                                    Minimum="80" Maximum="200" Value="120" 
                                    TickFrequency="10" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    ValueChanged="ThumbnailSizeSlider_ValueChanged"/>
                            <TextBlock x:Name="ThumbnailSizeText" Grid.Column="2" Text="120" FontSize="10" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0" Width="30"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- 캡처 리스트 스크롤 영역 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="CaptureListPanel" Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>