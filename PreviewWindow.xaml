<Window x:Class="CatchCapture.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchCapture"
        mc:Ignorable="d"
        Title="이미지 편집" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">
    
    <Window.Resources>
        <!-- 툴바 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEF2FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D8E0FF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 구분선 스타일 -->
        <Style x:Key="ToolbarSeparatorStyle" TargetType="Separator">
            <Setter Property="Margin" Value="6,4"/>
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#E0E6F0"/>
        </Style>
        
        <!-- 스크롤바 스타일 -->
        <Style x:Key="SimpleScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="#F0F0F0" CornerRadius="4"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="#BBBBBB" CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 도구 모음 -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E6F0" BorderThickness="0,0,0,1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ScrollViewer.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource SimpleScrollBar}"/>
                </ScrollViewer.Resources>
                <StackPanel Orientation="Horizontal" Margin="8,5">
                    <Button x:Name="CopyButton" Style="{StaticResource ToolbarButtonStyle}" Click="CopyButton_Click" ToolTip="클립보드에 복사">
                        <Image Source="/icons/copy_selected.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="SaveButton" Style="{StaticResource ToolbarButtonStyle}" Click="SaveButton_Click" ToolTip="저장">
                        <Image Source="/icons/save_selected.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="UndoButton" Style="{StaticResource ToolbarButtonStyle}" Click="UndoButton_Click" ToolTip="실행 취소" IsEnabled="False">
                        <Image Source="/icons/undo.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="RedoButton" Style="{StaticResource ToolbarButtonStyle}" Click="RedoButton_Click" ToolTip="다시 실행" IsEnabled="False">
                        <Image Source="/icons/redo.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="ResetButton" Style="{StaticResource ToolbarButtonStyle}" Click="ResetButton_Click" ToolTip="원본으로 되돌리기">
                        <Image Source="/icons/reset.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="CropButton" Style="{StaticResource ToolbarButtonStyle}" Click="CropButton_Click" ToolTip="자르기">
                        <Image Source="/icons/crop.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="RotateButton" Style="{StaticResource ToolbarButtonStyle}" Click="RotateButton_Click" ToolTip="회전">
                        <Image Source="/icons/rotate.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="FlipHorizontalButton" Style="{StaticResource ToolbarButtonStyle}" Click="FlipHorizontalButton_Click" ToolTip="좌우 반전">
                        <Image Source="/icons/flip_horizontal.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="FlipVerticalButton" Style="{StaticResource ToolbarButtonStyle}" Click="FlipVerticalButton_Click" ToolTip="상하 반전">
                        <Image Source="/icons/flip_vertical.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="HighlightButton" Style="{StaticResource ToolbarButtonStyle}" Click="HighlightButton_Click" ToolTip="형광펜">
                        <Image Source="/icons/highlight.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="TextButton" Style="{StaticResource ToolbarButtonStyle}" Click="TextButton_Click" ToolTip="텍스트 추가">
                        <Image Source="/icons/text.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="MosaicButton" Style="{StaticResource ToolbarButtonStyle}" Click="MosaicButton_Click" ToolTip="모자이크">
                        <Image Source="/icons/mosaic.png" Width="20" Height="20"/>
                    </Button>
                    
                    <Button x:Name="EraserButton" Style="{StaticResource ToolbarButtonStyle}" Click="EraserButton_Click" ToolTip="지우개">
                        <Image Source="/icons/eraser.png" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 이미지 표시 영역 -->
        <Border Grid.Row="1" Background="#F0F0F0" BorderThickness="0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource SimpleScrollBar}"/>
                </ScrollViewer.Resources>
                <Canvas x:Name="ImageCanvas" Background="#F0F0F0">
                    <Image x:Name="PreviewImage" Stretch="None" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Canvas>
            </ScrollViewer>
        </Border>

        <!-- 편집 도구 패널 (기본적으로 숨김) -->
        <Border x:Name="EditToolPanel" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right"
                Background="White" BorderBrush="#D0D7E5" BorderThickness="1" Margin="0,15,15,0"
                Padding="15" Visibility="Collapsed" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270"/>
            </Border.Effect>
            <StackPanel x:Name="EditToolContent"/>
        </Border>
    </Grid>
</Window> 