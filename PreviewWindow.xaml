<Window x:Class="CatchCapture.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:CatchCapture.Controls"
        xmlns:local="clr-namespace:CatchCapture"
        mc:Ignorable="d"
        Title="캐치캡처-이미지 편집" Height="800" Width="1500" MinWidth="1200"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="8" 
                      GlassFrameThickness="0" 
                      CornerRadius="10" 
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <!-- 툴바 버튼 스타일 -->

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 구분선 스타일 -->
        <Style x:Key="ToolbarSeparatorStyle" TargetType="Separator">
            <Setter Property="Margin" Value="7,8"/>
            <Setter Property="Width" Value="1"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="#D0D0D0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Rectangle Fill="{TemplateBinding Background}" 
                                   Width="{TemplateBinding Width}" 
                                   Height="{TemplateBinding Height}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 그림자 효과 -->
        <DropShadowEffect x:Key="MaterialShadow" ShadowDepth="1" BlurRadius="5" Opacity="0.2" Direction="270"/>
    </Window.Resources>
    
    <Border CornerRadius="10" Background="{DynamicResource ThemeBackground}" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <!-- Title Bar -->
                <RowDefinition Height="Auto"/> <!-- 도구 모음 -->
                <RowDefinition Height="*"/> <!-- 이미지 영역 -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightPanelColumn" Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{DynamicResource ThemeTitleBackground}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorder}" CornerRadius="10,10,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <Image Source="icons/camera.png" Width="18" Height="18" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="{DynamicResource ThemeTitleForeground}" FontWeight="SemiBold" FontSize="13"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                        <Button x:Name="BtnMinimize" Click="BtnMinimize_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Cursor="Hand" WindowChrome.IsHitTestVisibleInChrome="True">
                            <TextBlock Text="-" FontSize="24" Foreground="{DynamicResource ThemeTitleForeground}" Margin="0,-5,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="BtnMaximize" Click="BtnMaximize_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Cursor="Hand" WindowChrome.IsHitTestVisibleInChrome="True">
                            <TextBlock Text="▢" FontSize="16" Foreground="{DynamicResource ThemeTitleForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="BtnClose" Click="BtnClose_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Cursor="Hand" WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0,10,0,0">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#E81123"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="✕" FontSize="14" Foreground="{DynamicResource ThemeTitleForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 도구 모음 -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="{DynamicResource ThemePanelBackground}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1" Effect="{StaticResource MaterialShadow}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Margin="10,8" TextElement.Foreground="{DynamicResource ThemeForeground}">
                        <Button x:Name="RecaptureButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="RecaptureButton_Click" ToolTip="영역캡처">
                            <StackPanel VerticalAlignment="Top">
                                <Image Source="icons/area_capture.png" Width="28" Height="20" Margin="0,2,0,7"/>
                                <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                    <TextBlock x:Name="RecaptureLabelText" Text="재캡처" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                                </Viewbox>
                            </StackPanel>
                        </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/> 
 
 
                    <Button x:Name="PrintButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="PrintButton_Click" ToolTip="인쇄">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/printer.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="PrintLabelText" Text="인쇄" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SaveNoteButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="SaveNoteButton_Click" ToolTip="내 노트에 저장">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/my_note.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="SaveNoteLabelText" Text="노트저장" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="SaveButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="SaveButton_Click" ToolTip="저장">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/save_selected.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="SaveLabelText" Text="저장" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button x:Name="CopyButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="CopyButton_Click" ToolTip="클립보드에 복사">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/copy_selected.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="CopyLabelText" Text="복사" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>                    

                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="UndoButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="UndoButton_Click" ToolTip="실행 취소" IsEnabled="False">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/undo.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="UndoLabelText" Text="실행취소" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RedoButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="RedoButton_Click" ToolTip="다시 실행" IsEnabled="False">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/redo.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="RedoLabelText" Text="다시실행" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ResetButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="ResetButton_Click" ToolTip="원본으로 되돌리기">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/reset.png" Width="30" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="ResetLabelText" Text="초기화" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    
                    <Button x:Name="CropButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="CropButton_Click" ToolTip="자르기">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/crop.png" Width="30" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="CropLabelText" Text="자르기" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="RotateButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="RotateButton_Click" ToolTip="회전">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/rotate.png" Width="30" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="RotateLabelText" Text="회전" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="FlipHorizontalButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="FlipHorizontalButton_Click" ToolTip="좌우 반전">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/flip_horizontal.png" Width="30" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="FlipHorizontalLabelText" Text="좌우반전" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="FlipVerticalButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="FlipVerticalButton_Click" ToolTip="상하 반전">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/flip_vertical.png" Width="30" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="FlipVerticalLabelText" Text="상하반전" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="SelectButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="SelectButton_Click" ToolTip="선택">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/cursor.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="SelectLabelText" Text="선택" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <!-- 도형 버튼 그룹 (메인 버튼 + 드롭다운) -->
                    <Grid x:Name="ShapeToolGrid" Width="56" Height="65" Margin="2,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="52"/>
                            <RowDefinition Height="13"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 메인 도형 버튼 (기존 사이즈 유지) -->
                        <Button x:Name="ShapeButton" Grid.Row="0" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Click="ShapeButton_Click" ToolTip="도형 그리기 (기본: 사각형)">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6,6,0,0"
                                            Padding="2">
                                        <StackPanel>
                                            <Image Source="icons/shape.png" Width="20" Height="20" Margin="0,2,0,7"/>
                                            <Viewbox Width="54" Stretch="Uniform" StretchDirection="DownOnly">
                                                <TextBlock x:Name="ShapeLabelText" Text="도형" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                            <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                            <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- 드롭다운 버튼 (더 잘 보이게) -->
                        <Button x:Name="ShapeOptionsButton" Grid.Row="1" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Click="ShapeOptionsButton_Click" ToolTip="도형 옵션">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="Transparent" 
                                            BorderThickness="0"
                                            CornerRadius="0,0,6,6"
                                            Height="13">
                                        <TextBlock Text="▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                            <Setter Property="Opacity" Value="0.6" TargetName="border"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ThemeBorder}" TargetName="border"/>
                                            <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                  
                    <controls:TwoTierToolButton 
                        x:Name="PenToolButton"
                        Label="펜" 
                        ToolTipText="펜"
                        MainButtonClick="PenButton_Click"
                        OptionsButtonClick="PenOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Image Source="icons/pen.png" Width="20" Height="20"/>
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>
                    
                    <controls:TwoTierToolButton 
                        x:Name="HighlightToolButton"
                        Label="형광펜" 
                        ToolTipText="형광펜"
                        MainButtonClick="HighlightButton_Click"
                        OptionsButtonClick="HighlightOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Image Source="icons/highlight.png" Width="20" Height="20"/>
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>
                    
                    <controls:TwoTierToolButton 
                        x:Name="TextToolButton"
                        Label="텍스트" 
                        ToolTipText="텍스트 추가"
                        MainButtonClick="TextButton_Click"
                        OptionsButtonClick="TextOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Image Source="icons/text.png" Width="20" Height="20" />
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>
                    
                    <controls:TwoTierToolButton 
                        x:Name="MosaicToolButton"
                        Label="모자이크" 
                        ToolTipText="모자이크"
                        MainButtonClick="MosaicButton_Click"
                        OptionsButtonClick="MosaicOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Image Source="icons/mosaic.png" Width="20" Height="20"/>
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>

                    <controls:TwoTierToolButton 
                        x:Name="NumberingToolButton"
                        Label="넘버링" 
                        ToolTipText="번호 매기기"
                        MainButtonClick="NumberingButton_Click"
                        OptionsButtonClick="NumberingOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Canvas Width="20" Height="20">
                                <Ellipse Fill="DeepSkyBlue" Width="18" Height="18" Canvas.Left="1" Canvas.Top="1"/>
                                <TextBlock Text="1" Foreground="White" FontSize="10" FontWeight="Bold" Canvas.Left="6" Canvas.Top="2"/>
                            </Canvas>
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>
                    
                    <controls:TwoTierToolButton 
                        x:Name="EraserToolButton"
                        Label="지우개" 
                        ToolTipText="지우개"
                        MainButtonClick="EraserButton_Click"
                        OptionsButtonClick="EraserOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Image Source="icons/eraser.png" Width="20" Height="20"/>
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>   
                    <controls:TwoTierToolButton 
                        x:Name="MagicWandToolButton"
                        Label="" 
                        ToolTipText=""
                        MainButtonClick="MagicWandButton_Click"
                        OptionsButtonClick="MagicWandOptionsButton_Click">
                        <controls:TwoTierToolButton.IconContent>
                            <Image Source="icons/img_eraser.png" Width="20" Height="20"/>
                        </controls:TwoTierToolButton.IconContent>
                    </controls:TwoTierToolButton>
                    <Separator Style="{StaticResource ToolbarSeparatorStyle}"/>
                    <!-- 이미지 검색 버튼 (구글 렌즈) -->
                    <Button x:Name="ImageSearchButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="ImageSearchButton_Click" ToolTip="이미지 검색">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/img_find.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="51" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="ImageSearchLabelText" Text="이미지 검색" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <!-- 공유 버튼 -->
                    <Button x:Name="ShareButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="ShareButton_Click" ToolTip="공유">
                        <StackPanel VerticalAlignment="Top">
                            <Image Source="icons/share_img.png" Width="20" Height="20" Margin="0,2,0,7"/>
                            <Viewbox Width="51" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="ShareLabelText" Text="공유" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button x:Name="OcrButton" Style="{StaticResource ToolbarButtonStyle}" Height="65" Click="OcrButton_Click" ToolTip="텍스트 추출">
                        <StackPanel VerticalAlignment="Top">
                            <TextBlock x:Name="OcrLabelText" Text="OCR" Foreground="{DynamicResource ThemeForeground}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,2,0,7"/>
                            <Viewbox Width="51" Stretch="Uniform" StretchDirection="DownOnly">
                                <TextBlock x:Name="OcrExtractLabelText" Text="추출" Foreground="{DynamicResource ThemeForeground}" FontSize="12" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </StackPanel>
                    </Button> 
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 아이콘 하단에 표시되는 도구 옵션 팝업 -->
        <Popup x:Name="ToolOptionsPopup" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
            <Border Background="{DynamicResource ThemeBackground}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" CornerRadius="6" Padding="10" Effect="{StaticResource MaterialShadow}">
                <StackPanel x:Name="ToolOptionsPopupContent" Orientation="Horizontal" />
            </Border>
        </Popup>

        <!-- 이미지 표시 영역 (전체 바둑판 배경) -->
        <Border Grid.Row="2" Grid.Column="0" BorderThickness="0">
            <Border.Background>
                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <!-- 배경색 (테마 배경) -->
                            <GeometryDrawing Brush="{DynamicResource ThemeBackground}">
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,20,20"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                            <!-- 체크무늬 (테마 글자색의 10% 투명도) -->
                            <DrawingGroup Opacity="0.1">
                                <GeometryDrawing Brush="{DynamicResource ThemeForeground}">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,10,10"/>
                                            <RectangleGeometry Rect="10,10,10,10"/>
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Border.Background>
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">
                        <!-- Canvas 배경을 투명하게 해서 뒤쪽(Border)의 바둑판 무늬가 보이도록 함 -->
                        <Canvas x:Name="ImageCanvas" ClipToBounds="True" Background="Transparent">
                            <Canvas.LayoutTransform>
                                <ScaleTransform x:Name="CanvasScaleTransform"/>
                            </Canvas.LayoutTransform>
                            <Image x:Name="PreviewImage" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                        </Canvas>
                    </Grid>
                </ScrollViewer>
                
                <!-- 토글 버튼 (오른쪽 끝에 고정) -->
                <Button x:Name="ToggleButton" 
                        Width="12" 
                        Height="60"
                        Background="#F5F5F5" 
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Click="ToggleButton_Click"
                        Panel.ZIndex="1000">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3" Direction="0"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4,0,0,4">
                                <Path x:Name="Arrow" 
                                      Data="M 4,0 L 8,5 L 4,10 Z" 
                                      Fill="{DynamicResource ThemeForeground}" 
                                      Opacity="0.5"
                                      Stretch="Uniform"
                                      Width="6"
                                      Height="12"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Arrow" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 하단 중앙 이미지 정보 바 -->
                <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                        Background="#E6000000" CornerRadius="4" Padding="12,6" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="ImageInfoText" Text="이미지 사이즈 : 808 x 428" 
                                   Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Text="—" Foreground="#999" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock x:Name="ZoomLevelText" Text="100 %" 
                                   Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <Button x:Name="ZoomOutButton" Content="−" 
                                Background="Transparent" Foreground="White" BorderThickness="0" 
                                Padding="8,4" FontSize="16" Cursor="Hand" Click="ZoomOutButton_Click"
                                Margin="0,0,5,0" ToolTip="축소"/>
                        <Button x:Name="ZoomInButton" Content="+" 
                                Background="Transparent" Foreground="White" BorderThickness="0" 
                                Padding="8,4" FontSize="16" Cursor="Hand" Click="ZoomInButton_Click"
                                Margin="0,0,5,0" ToolTip="확대"/>
                        <Button x:Name="ZoomResetButton" Content="원본" 
                                Background="Transparent" Foreground="White" BorderThickness="0" 
                                Padding="8,2" FontSize="11" Cursor="Hand" Click="ZoomResetButton_Click"
                                ToolTip="100%"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 하단 옵션 패널 (편집 도구 옵션) - 이미지 위에 오버레이 -->
        <Border x:Name="EditToolPanel" Grid.Row="2" Grid.ColumnSpan="2" Background="{DynamicResource ThemePanelBackground}" BorderBrush="{DynamicResource ThemeBorder}" 
                BorderThickness="0,1,0,0" Visibility="Collapsed" Effect="{StaticResource MaterialShadow}"
                VerticalAlignment="Bottom">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="10,8,10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 패널 제목 -->
                    <Viewbox Grid.Column="0" MaxWidth="80" Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock x:Name="ToolTitleText" Text="도구 옵션" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource ThemeForeground}"/>
                    </Viewbox>
                    
                    <!-- 옵션 컨텐츠 - 가로 배열로 변경 -->
                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                MaxHeight="60" Margin="0,0,10,0">
                        <StackPanel x:Name="EditToolContent" Orientation="Horizontal"/>
                    </ScrollViewer>
                    
                    <!-- 닫기 버튼 -->
                    <Button x:Name="CloseOptionsButton" Grid.Column="2" Content="✕" 
                            Width="22" Height="22"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="{DynamicResource ThemeBorder}" BorderThickness="0" FontSize="10" FontWeight="Bold" 
                            Foreground="{DynamicResource ThemeForeground}"
                            Opacity="0.8"
                            Cursor="Hand" Click="CloseOptionsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="11"
                                        Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
        
        <!-- 우측 캡처 리스트 패널 -->
        <Border x:Name="CaptureListBorder" 
                Grid.Row="2" Grid.Column="1"
                Background="{DynamicResource ThemePanelBackground}" 
                BorderBrush="{DynamicResource ThemeBorder}" 
                BorderThickness="1,0,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.15" Direction="180"/>
            </Border.Effect>
            <Border.RenderTransform>
                <TranslateTransform x:Name="PanelTransform" X="0"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                                
                <!-- 헤더 영역 -->
                <Border Grid.Row="0" Background="{DynamicResource ThemePanelBackground}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorder}" Padding="12,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 제목과 캡처 개수 -->
                        <Grid Grid.Row="0">
                            <Viewbox MaxWidth="120" Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock x:Name="RecentCapturesTitle" Text="최근 캡처 목록" FontWeight="SemiBold" FontSize="13" Foreground="{DynamicResource ThemeForeground}"/>
                            </Viewbox>
                            <TextBlock x:Name="CaptureCountText" Text="(0)" FontSize="12" Foreground="{DynamicResource ThemeForeground}" Opacity="0.5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- 썸네일 크기 조절 슬라이더 -->
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Viewbox Grid.Column="0" MaxWidth="40" Stretch="Uniform" StretchDirection="DownOnly" VerticalAlignment="Center" Margin="0,0,8,0">
                                <TextBlock x:Name="SizeLabelText" Text="크기" FontSize="10" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6"/>
                            </Viewbox>
                            <Slider x:Name="ThumbnailSizeSlider" Grid.Column="1" 
                                    Minimum="80" Maximum="200" Value="80" 
                                    TickFrequency="10" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    ValueChanged="ThumbnailSizeSlider_ValueChanged"/>
                            <TextBlock x:Name="ThumbnailSizeText" Grid.Column="2" Text="80" FontSize="10" Foreground="{DynamicResource ThemeForeground}" Opacity="0.6" VerticalAlignment="Center" Margin="8,0,0,0" Width="30"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- 캡처 리스트 스크롤 영역 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="CaptureListPanel" Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>
        <!-- 토스트 메시지 -->
        <Border x:Name="ToastBorder" Background="#333333" CornerRadius="4" Padding="15,10" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100"
                Opacity="0" IsHitTestVisible="False" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock x:Name="ToastText" Text="메시지" Foreground="White" FontSize="14"/>
        </Border>
    </Grid>
</Border>
</Window>