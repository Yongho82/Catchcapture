<Window x:Class="CatchCapture.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="알림" Height="Auto" Width="360" MinHeight="180"
        SizeToContent="Height"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">

    <Window.Resources>
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border x:Name="border" Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="6">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                    <Setter TargetName="border" Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="50" CenterY="18"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Direction="315" Color="#20000000" Opacity="0.25"/>
        </Border.Effect>

        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/> <!-- Header -->
                <RowDefinition Height="Auto" MinHeight="80"/>   <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock x:Name="TitleText" Text="알림" VerticalAlignment="Center" Margin="20,0" 
                           FontWeight="Bold" FontSize="15" Foreground="#333"/>
                <Button x:Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        Width="30" Height="30" Margin="10,0" Background="Transparent" BorderThickness="0"
                        Click="CloseButton_Click" Cursor="Hand" ToolTip="닫기">
                    <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="#999" StrokeThickness="1.5" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Separator VerticalAlignment="Bottom" Background="#F0F0F0" Margin="0"/>
            </Grid>

            <!-- Content -->
            <TextBlock x:Name="MessageText" Grid.Row="1" Text="메시지 내용이 여기에 표시됩니다." 
                       TextWrapping="Wrap" TextAlignment="Center"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="30,20,30,20" FontSize="14" Foreground="#555" LineHeight="22"/>

            <!-- Footer -->
            <StackPanel x:Name="ButtonPanel" Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,15">
                
                <!-- 왼쪽 버튼 (부정/취소) -->
                <Button x:Name="BtnLeft" Content="취소" Width="110" Height="40" Margin="0,0,10,0"
                        Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                        Foreground="#666" FontWeight="SemiBold" FontSize="14"
                        Template="{StaticResource RoundedButtonTemplate}"
                        Click="BtnLeft_Click" Cursor="Hand"/>

                <!-- 오른쪽 버튼 (긍정/확인) -->
                <Button x:Name="BtnRight" Content="확인" Width="110" Height="40"
                        Background="#4361EE" BorderThickness="0"
                        Foreground="White" FontWeight="Bold" FontSize="14"
                        Template="{StaticResource RoundedButtonTemplate}"
                        Click="BtnRight_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
