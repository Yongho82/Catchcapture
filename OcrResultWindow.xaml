<Window x:Class="CatchCapture.OcrResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="텍스트 추출 결과" Height="600" Width="800"
        MinWidth="300" MinHeight="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8F9FC">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText" Text="추출된 텍스트" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <TextBox x:Name="ResultTextBox" Grid.Row="1" 
                 AcceptsReturn="True" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 Padding="10" FontSize="13"
                 BorderBrush="#D0D7E5"/>

        <TextBlock x:Name="WarningText" Grid.Row="2"
                   Text="※ 일본어/중국어 인식이 정확하지 않다면 Windows 설정 > 시간 및 언어 > 언어에서 해당 언어 팩을 설치해 보세요." 
                   Foreground="#D32F2F" FontSize="12" Margin="0,10,0,0" 
                   TextWrapping="Wrap" Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="GoogleTranslateButton" Width="100" Height="35" 
                    Background="#34A853" Foreground="White" BorderThickness="0"
                    Cursor="Hand" Click="GoogleTranslateButton_Click" Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button x:Name="CopyButton" Width="80" Height="35" 
                    Background="#4B6EF5" Foreground="White" BorderThickness="0"
                    Cursor="Hand" Click="CopyButton_Click" Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button x:Name="CloseButton" Width="80" Height="35" 
                    Background="White" BorderBrush="#D0D7E5" BorderThickness="1"
                    Cursor="Hand" Click="CloseButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
