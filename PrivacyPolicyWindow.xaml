<Window x:Class="CatchCapture.PrivacyPolicyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Privacy Policy" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F7"
        FontFamily="Malgun Gothic, Segoe UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0">
            <Border Background="White" CornerRadius="8" Padding="30" Margin="0">
                <StackPanel x:Name="ContentPanel"/>
            </Border>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="CloseButton" Width="120" Height="34" Click="CloseButton_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="SemiBold">닫기</Button>
        </StackPanel>
    </Grid>
</Window>
